<script>
  // Mobile Menu Logic with Backdrop Blur
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const sidebarOverlay = document.getElementById("sidebar-overlay");
  const sidebar = document.getElementById("sidebar");
  const openIcon = document.getElementById("menu-open-icon");
  const closeIcon = document.getElementById("menu-close-icon");

  let isMobileMenuOpen = false;

  function toggleMobileMenu() {
    isMobileMenuOpen = !isMobileMenuOpen;

    if (isMobileMenuOpen) {
      // Open
      sidebar?.classList.toggle("hidden");
      sidebar?.classList.add(
        "fixed",
        "inset-y-0",
        "left-0",
        "z-40",
        "w-60",
        "shadow-2xl",
        "animate-slide-in",
      );
      sidebarOverlay?.classList.toggle("hidden");
      setTimeout(() => sidebarOverlay?.classList.add("opacity-100"), 10); // Fade in

      openIcon?.classList.toggle("hidden");
      closeIcon?.classList.toggle("hidden");
      document.body.style.overflow = "hidden"; // Prevent scrolling
    } else {
      // Close
      sidebarOverlay?.classList.remove("opacity-100");
      setTimeout(() => sidebarOverlay?.classList.add("hidden"), 300); // Wait for fade

      // Remove fixed classes but keep hidden logic for desktop/mobile switch
      sidebar?.classList.remove(
        "fixed",
        "inset-y-0",
        "left-0",
        "z-40",
        "w-60",
        "shadow-2xl",
        "animate-slide-in",
      );
      sidebar?.classList.add("hidden");
      // Reset to original class state if needed (handled by CSS media queries mostly)

      openIcon?.classList.toggle("hidden");
      closeIcon?.classList.toggle("hidden");
      document.body.style.overflow = "";
    }
  }

  mobileMenuButton?.addEventListener("click", toggleMobileMenu);
  sidebarOverlay?.addEventListener("click", toggleMobileMenu);

  // Close menu on route change (view transitions)
  document.addEventListener("astro:page-load", () => {
    if (isMobileMenuOpen) toggleMobileMenu();
  });
  document.addEventListener("astro:load", () => {
   if (isMobileMenuOpen) toggleMobileMenu();
  });
</script>
