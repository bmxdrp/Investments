// Sidebar.astro
import { getUser } from "@lib/db";

const userId = Astro.locals.userId;
if (!userId) {
  throw new Error("Usuario no autenticado");
}
const user = await getUser(userId);
const { name, role } = user;
interface Props {
  activePage: string;
}

const { activePage} = Astro.props;

const PAGE_METADATA: Record<string,{ name: string; href: string; icon: string; order: number }> = {
  dashboard: { name: "Dashboard", href: "/dashboard", icon: "dashboard", order: 1 },
  accounts: { name: "Cuentas", href: "/dashboard/accounts", icon: "accounts", order: 2 },
  contribute: { name: "Aportes", href: "/dashboard/contribute", icon: "contribute", order: 3 },
  withdraw: { name: "Retiros", href: "/dashboard/withdraw", icon: "withdraw", order: 4 },
  transfer: { name: "Transferencias", href: "/dashboard/transfer", icon: "transfer", order: 5 },
  performance: { name: "Rendimientos", href: "/dashboard/performance", icon: "performance", order: 6 },
  history: { name: "Historial", href: "/dashboard/history", icon: "history", order: 7 },
  goals: { name: "Metas", href: "/dashboard/goals", icon: "goals", order: 8 },
  alerts: { name: "Alertas", href: "/dashboard/alerts", icon: "alerts", order: 9 },
  // settings: { name: "Ajustes", href: "/dashboard/settings", icon: "settings", order: 99 },
};
  const menuItems = Object.entries(PAGE_METADATA).map(([page, meta]) => {
    return {
      name: meta.name,
      href: meta.href,
      icon: meta.icon,
      order: meta.order,
    };
  });
---

<!-- Mobile Menu Button with Zen Blur -->
<button
  id="mobile-menu-button"
  type="button"
  class="fixed top-4 right-4 z-50 lg:hidden p-2.5 rounded-xl bg-white/90 backdrop-blur-md shadow-sm border border-stone-200 text-stone-600 hover:text-stone-900 transition-all hover:scale-105 active:scale-95"
>
  <svg
    id="menu-open-icon"
    class="w-6 h-6 lg:hidden z-50"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M4 6h16M4 12h16M4 18h16"></path>
  </svg>
  <svg
