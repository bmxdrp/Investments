---
import ErrorLayout from "@layouts/error.astro";
---
<ErrorLayout
    title="Error Interno"
    errorCode="500"
    errorTitle="Error Interno"
    errorMessage="Se ha producido un error interno. Por favor, intenta de nuevo o contacta con soporte."
    iconType="server"
 >
    <div class="mt-6 p-4 bg-red-50 border border-red-200 rounded-xl">
        <div class="flex items-start gap-3">
            <svg
                class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                ></path></svg>
            <div class="flex-1">
                <h3 class="text-sm font-semibold text-red-900 mb-1">¿Qué puedes hacer?</h3>
                <ul class="text-sm text-red-700 space-y-1">
                    <li>• Intenta recargar la página en unos minutos</li>
                    <li>• Verifica tu conexión a internet</li>
                    <li>• Si el problema persiste, contacta con soporte</li>
                </ul>
            </div>
        </div>
    </div>
</ErrorLayout>
