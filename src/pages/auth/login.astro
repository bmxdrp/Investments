---
import Layout from "@layouts/home.astro";
const returnTo = Astro.url.searchParams.get("returnTo") || "/admin";
const safeReturnTo = returnTo.startsWith("/") ? returnTo : "/admin";
const error = Astro.url.searchParams.get("error") || null;
---

<Layout title="Login">
  <div
    class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-8 sm:py-12"
  >
    <div
      class="w-full max-w-md bg-stone-900/60 backdrop-blur-xl border border-stone-800
             shadow-2xl rounded-3xl p-6 sm:p-8 animate-fadeIn"
    >
      <div class="flex justify-center mb-6">
        <img
          src="/logo.png"
          alt="Capyte"
          class="w-16 h-16 rounded-2xl shadow-lg shadow-amber-900/20"
        />
      </div>
      <h1
        class="text-2xl sm:text-3xl font-bold text-stone-100 text-center mb-2"
      >
        Bienvenido
      </h1>
      <p class="text-sm sm:text-base text-stone-400 text-center mb-8">
        Accede al panel administrativo
      </p>

      <form
        method="POST"
        action={`/api/auth/login?returnTo=${safeReturnTo}`}
        class="space-y-4 sm:space-y-6"
      >
        <!-- Email -->
        <div>
          <label class="text-stone-300 text-sm font-medium mb-1.5 block"
            >Correo</label
          >
          <input
            type="email"
            name="email"
            required
            placeholder="tucorreo@mail.com"
            class="w-full px-4 py-3 rounded-xl bg-stone-950/50 border border-stone-800
                   text-stone-100 placeholder-stone-500 focus:outline-none focus:ring-2
                   focus:ring-amber-500/50 focus:border-amber-500 transition-all text-sm sm:text-base"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="text-stone-300 text-sm font-medium mb-1.5 block"
            >Contraseña</label
          >
          <input
            type="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 rounded-xl bg-stone-950/50 border border-stone-800
                   text-stone-100 placeholder-stone-500 focus:outline-none focus:ring-2
                   focus:ring-amber-500/50 focus:border-amber-500 transition-all text-sm sm:text-base"
          />
        </div>

        <!-- Botón login -->
        <button
          type="submit"
          class="w-full py-3.5 rounded-xl bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-500 hover:to-orange-500 transition-all
                 text-white font-bold shadow-lg shadow-amber-900/20 hover:shadow-amber-900/40 transform hover:-translate-y-0.5 text-sm sm:text-base"
        >
          Iniciar Sesión
        </button>
      </form>

      {
        error && (
          <div class="bg-red-500/10 border border-red-500/20 mt-6 rounded-xl p-4 flex items-start gap-3">
            <svg
              class="h-5 w-5 text-red-400 shrink-0 mt-0.5"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
            <div>
              <p class="text-sm font-medium text-red-200">
                Error al realizar la operación
              </p>
              {error && (
                <p class="mt-1 text-xs sm:text-sm text-red-300">
                  {decodeURIComponent(error)}
                </p>
              )}
            </div>
          </div>
        )
      }
      <!-- Extra -->
      <p class="text-center text-stone-500 text-xs sm:text-sm mt-8">
        ¿Olvidaste tu contraseña?
        <a
          href="/auth/forgot-password"
          class="text-amber-500 hover:text-amber-400 hover:underline font-medium transition-colors"
          >Recuperarla</a
        >
      </p>
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeIn {
      animation: fadeIn 0.7s ease-out forwards;
    }
  </style>
</Layout>
