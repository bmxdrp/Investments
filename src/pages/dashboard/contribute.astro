---
import Layout from "@layouts/default.astro";
import { sql } from "@lib/db";

const userId = Astro.locals.userId;

if (!userId) {
  return Astro.redirect("/auth/login?returnTo=/dashboard/contribute");
}

const { searchParams } = Astro.url;
const contributionSuccess = searchParams.get("contribution_success");
const error = searchParams.get("error");

// Obtener cuentas disponibles
const accounts = await sql`
  SELECT id, name, currency
  FROM accounts
  WHERE currency IN ('COP', 'USD')
  AND user_id = ${userId}
  ORDER BY name ASC;
`;

// Fecha actual por defecto (hora de Colombia)
const today = new Date().toLocaleDateString("en-CA", {
  timeZone: "America/Bogota",
});
---

<Layout title="Agregar Inversi√≥n" activePage="contribute">
  <div class="max-w-2xl mx-auto space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="mb-6 sm:mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
        Agregar Inversi√≥n
      </h1>
      <p class="mt-2 text-sm sm:text-base text-gray-600">
        Registra un nuevo aporte a tu portafolio
      </p>
    </div>

    <!-- Mensajes de √©xito/error -->
    {
      contributionSuccess === "1" && (
        <div class="mb-4 sm:mb-6 bg-green-50 border border-green-200 rounded-lg p-3 sm:p-4">
          <div class="flex">
            <svg
              class="h-5 w-5 text-green-400 flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              />
            </svg>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                ¬°Inversi√≥n registrada exitosamente!
              </p>
            </div>
          </div>
        </div>
      )
    }

    {
      contributionSuccess === "0" && (
        <div class="mb-4 sm:mb-6 bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
          <div class="flex">
            <svg
              class="h-5 w-5 text-red-400 flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800">
                Error al registrar la inversi√≥n
              </p>
              {error && (
                <p class="mt-1 text-sm text-red-700">
                  {decodeURIComponent(error)}
                </p>
              )}
            </div>
          </div>
        </div>
      )
    }

    <!-- Formulario de inversi√≥n -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <form
        method="POST"
        action="/api/transactions/contribute"
        class="p-4 sm:p-6 space-y-4 sm:space-y-6"
      >
        <!-- Cuenta -->
        <div>
          <label
            for="account_id"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Cuenta <span class="text-red-500">*</span>
          </label>
          <select
            id="account_id"
            name="account_id"
            required
            class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-sm sm:text-base"
          >
            <option value="">Selecciona una cuenta</option>
            {
              accounts.map((account) => (
                <option value={account.id}>
                  {account.name} ({account.currency})
                </option>
              ))
            }
          </select>
        </div>

        <!-- Fecha -->
        <div>
          <label
            for="date"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Fecha <span class="text-red-500">*</span>
          </label>
          <input
            type="date"
            id="date"
            name="date"
            value={today}
            required
            class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-sm sm:text-base"
          />
        </div>

        <!-- Monto -->
        <div>
          <label
            for="amount"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Monto <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <span
              class="absolute left-3 sm:left-4 top-2.5 text-gray-500 text-sm sm:text-base"
              >$</span
            >
            <input
              type="number"
              id="amount"
              name="amount"
              step="0.01"
              min="0.01"
              placeholder="0.00"
              required
              class="w-full pl-7 sm:pl-8 pr-3 sm:pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-sm sm:text-base"
            />
          </div>
          <p class="mt-1 text-xs text-gray-500">
            Ingresa el monto de tu inversi√≥n
          </p>
        </div>

        <!-- Moneda -->
        <div>
          <label
            for="currency"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Moneda <span class="text-red-500">*</span>
          </label>
          <select
            id="currency"
            name="currency"
            required
            class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition text-sm sm:text-base"
          >
            <option value="COP">COP - Peso Colombiano</option>
            <option value="USD">USD - D√≥lar Estadounidense</option>
          </select>
        </div>

        <!-- Nota -->
        <div>
          <label
            for="note"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Nota (opcional)
          </label>
          <textarea
            id="note"
            name="note"
            rows="3"
            value="pruebass"
            placeholder="Ej: Aporte mensual, inversi√≥n inicial, etc."
            class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition resize-none text-sm sm:text-base"
          ></textarea>
        </div>

        <!-- Info Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 sm:p-4">
          <div class="flex">
            <svg
              class="h-5 w-5 text-blue-400 shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <p class="text-xs sm:text-sm text-blue-800">
                El valor del portafolio se actualizar√° autom√°ticamente al
                registrar este aporte.
              </p>
            </div>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4">
          <button
            type="submit"
            class="w-full sm:flex-1 bg-blue-600 text-white px-6 py-2.5 sm:py-3 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition text-sm sm:text-base"
          >
            Guardar Inversi√≥n
          </button>
          <a
            href="/admin"
            class="w-full sm:flex-1 bg-gray-100 text-gray-700 px-6 py-2.5 sm:py-3 rounded-lg font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition text-center text-sm sm:text-base"
          >
            Cancelar
          </a>
        </div>
      </form>
    </div>

    <!-- Informaci√≥n adicional -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-3 sm:p-4">
      <h3 class="text-sm font-medium text-green-900 mb-2">
        üí° Consejos para registrar inversiones
      </h3>
      <ul class="text-xs sm:text-sm text-green-800 space-y-1">
        <li>‚Ä¢ Registra tus aportes tan pronto como los hagas</li>
        <li>‚Ä¢ La moneda debe coincidir con la de tu cuenta</li>
        <li>‚Ä¢ Usa notas descriptivas para facilitar el seguimiento</li>
        <li>‚Ä¢ Verifica el monto antes de guardar</li>
      </ul>
    </div>
  </div>
</Layout>
