import Layout from "@layouts/default.astro";
import { sql, setRLSUser } from "@lib/db";

const userId = Astro.locals.userId;

if (!userId) {
  return Astro.redirect("/auth/login?returnTo=/dashboard/update-rate");
}

const url = new URL(Astro.request.url);
const period = url.searchParams.get("period") || "30";
const periodDays = parseInt(period);

await setRLSUser(userId);

// Obtener tasa de cambio actual
const exchangeRate = await sql`
  SELECT usd_to_cop FROM exchange_rates ORDER BY date DESC LIMIT 1;
`;
const currentRate = parseFloat(exchangeRate[0]?.usd_to_cop || 3900);

const toCOP = (value: number, currency: string) => {
  return currency === "USD" ? value * currentRate : value;
};

// Obtener todas las cuentas
const allAccounts = await sql`
  SELECT id, name, currency, parent_account_id 
  FROM accounts 
  WHERE user_id = ${userId}
  ORDER BY parent_account_id NULLS FIRST, id;
`;

// Función para calcular métricas avanzadas
const calculateMetrics = (values: number[]) => {
  if (values.length < 2)
    return { volatility: 0, sharpe: 0, maxDrawdown: 0, avgReturn: 0 };

  const returns = [];
  for (let i = 1; i < values.length; i++) {
    if (values[i - 1] > 0) {
      returns.push((values[i] - values[i - 1]) / values[i - 1]);
    }
  }

  if (returns.length === 0)
    return { volatility: 0, sharpe: 0, maxDrawdown: 0, avgReturn: 0 };

  const avgReturn = returns.reduce((a, b) => a + b, 0) / returns.length;
  const variance =
    returns.reduce((sum, r) => sum + Math.pow(r - avgReturn, 2), 0) /
    returns.length;
  const volatility = Math.sqrt(variance) * Math.sqrt(252) * 100;

  const riskFreeRate = 0.05 / 252;
  const excessReturns = returns.map((r) => r - riskFreeRate);
  const avgExcessReturn =
    excessReturns.reduce((a, b) => a + b, 0) / excessReturns.length;
  const sharpe =
    volatility > 0 ? (avgExcessReturn * 252) / (volatility / 100) : 0;

  let maxDrawdown = 0;
  let peak = values[0];
  for (const value of values) {
    if (value > peak) peak = value;
    const drawdown = ((value - peak) / peak) * 100;
    if (drawdown < maxDrawdown) maxDrawdown = drawdown;
  }

  return { volatility, sharpe, maxDrawdown, avgReturn: avgReturn * 252 * 100 };
};

// Función para calcular proyección lineal
const calculateProjection = (values: number[], days: number) => {
  if (values.length < 2) return values[values.length - 1] || 0;

  const n = values.length;
  const x = Array.from({ length: n }, (_, i) => i);
  const y = values;

  const sumX = x.reduce((a, b) => a + b, 0);
  const sumY = y.reduce((a, b) => a + b, 0);
  const sumXY = x.reduce((sum, xi, i) => sum + xi * y[i], 0);
  const sumX2 = x.reduce((sum, xi) => sum + xi * xi, 0);

  const denominator = n * sumX2 - sumX * sumX;
  if (denominator === 0) return values[values.length - 1];
  const slope = (n * sumXY - sumX * sumY) / denominator;
  const intercept = (sumY - slope * sumX) / n;

  return slope * (n + days) + intercept;
};

// ============================================
// ROI DE PORTFOLIO TOTAL (sin transferencias internas)
// ============================================
const portfolioStartBalanceRes = await sql`
  SELECT SUM(
    CASE 
      WHEN a.currency = 'USD' THEN t.new_value * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE t.new_value 
    END
  ) as total
  FROM (
    SELECT DISTINCT ON (account_id) account_id, new_value, usd_to_cop_rate
    FROM transactions 
    WHERE user_id = ${userId} 
    AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
    ORDER BY account_id, date DESC, id DESC
  ) t
  JOIN accounts a ON a.id = t.account_id
  WHERE a.user_id = ${userId}
`;
const portfolioStartBalance = parseFloat(portfolioStartBalanceRes[0]?.total || 0);

const portfolioCurrentBalanceRes = await sql`
  SELECT SUM(
    CASE 
      WHEN a.currency = 'USD' THEN t.new_value * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE t.new_value 
    END
  ) as total
  FROM (
    SELECT DISTINCT ON (account_id) account_id, new_value, usd_to_cop_rate
    FROM transactions 
    WHERE user_id = ${userId}
    ORDER BY account_id, date DESC, id DESC
  ) t
  JOIN accounts a ON a.id = t.account_id
  WHERE a.user_id = ${userId}
`;
const totalPortfolio = parseFloat(portfolioCurrentBalanceRes[0]?.total || 0);

// Flujos EXTERNOS del portfolio (excluye transfer_in/transfer_out)
const [portfolioContribsRes, portfolioWithdrawsRes] = await Promise.all([
  sql`
    SELECT SUM(
      CASE 
        WHEN currency = 'USD' THEN amount * COALESCE(usd_to_cop_rate, ${currentRate})
        ELSE amount 
      END
    ) as total
    FROM transactions 
    WHERE type IN ('contribution', 'initial_balance')
    AND user_id = ${userId}
    AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
  `,
  sql`
    SELECT SUM(
      CASE 
        WHEN currency = 'USD' THEN amount * COALESCE(usd_to_cop_rate, ${currentRate})
        ELSE amount 
      END
    ) as total
    FROM transactions 
    WHERE type = 'withdrawal'
    AND user_id = ${userId}
    AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
  `,
]);

const portfolioContribs = parseFloat(portfolioContribsRes[0]?.total || 0);
const portfolioWithdraws = parseFloat(portfolioWithdrawsRes[0]?.total || 0);
const portfolioNetFlow = portfolioContribs - portfolioWithdraws;

const portfolioGain = totalPortfolio - portfolioStartBalance - portfolioNetFlow;
const portfolioAverageCapital = portfolioStartBalance + (portfolioNetFlow / 2);
const portfolioROI = portfolioAverageCapital > 0 ? (portfolioGain / portfolioAverageCapital) * 100 : 0;

// ============================================
// CALCULAR ESTADÍSTICAS POR CUENTA
// ============================================
// ============================================
// ROI POR CUENTA - Métricas consolidadas correctas
// ============================================
const accountsWithStats = await Promise.all(
  allAccounts
    .filter((acc) => !acc.parent_account_id)
    .map(async (account) => {
      // ========================================
      // 1. OBTENER HISTORIAL DE LA CUENTA PADRE
      // ========================================
      const history = await sql`
        SELECT new_value, date 
        FROM transactions 
        WHERE account_id = ${account.id}
        AND user_id = ${userId}
        AND new_value IS NOT NULL
        AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        ORDER BY date ASC
      `;

      const values = history.map((h) => Number(h.new_value));
      const currentValue = values[values.length - 1] || 0;

      // Balance inicial de la cuenta padre
      const startBalanceRes = await sql`
        SELECT new_value FROM transactions 
        WHERE account_id = ${account.id} 
        AND user_id = ${userId} 
        AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        ORDER BY date DESC, id DESC 
        LIMIT 1
      `;
      const startBalance = startBalanceRes.length > 0 ? Number(startBalanceRes[0].new_value) : 0;

      // Flujos EXTERNOS de la cuenta padre
      const [periodContribsExt, periodWithdrawsExt] = await Promise.all([
        sql`
          SELECT SUM(amount) as total 
          FROM transactions 
          WHERE account_id = ${account.id} 
          AND user_id = ${userId} 
          AND type IN ('contribution', 'initial_balance') 
          AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        `,
        sql`
          SELECT SUM(amount) as total 
          FROM transactions 
          WHERE account_id = ${account.id} 
          AND user_id = ${userId} 
          AND type = 'withdrawal' 
          AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        `,
      ]);

      const contribsExt = parseFloat(periodContribsExt[0]?.total || 0);
      const withdrawsExt = parseFloat(periodWithdrawsExt[0]?.total || 0);
      const netFlowExt = contribsExt - withdrawsExt;

      // ========================================
      // 2. PROCESAR SUBCUENTAS
      // ========================================
      const subaccounts = allAccounts.filter(
        (sub) => sub.parent_account_id === account.id,
      );

      const subsWithStats = await Promise.all(
        subaccounts.map(async (sub) => {
          const subHistory = await sql`
            SELECT new_value, date FROM transactions 
            WHERE account_id = ${sub.id}
            AND user_id = ${userId}
            AND new_value IS NOT NULL
            AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            ORDER BY date ASC
          `;
          const subValues = subHistory.map((h) => Number(h.new_value));
          const subCurrent = subValues[subValues.length - 1] || 0;

          const subStartBalanceRes = await sql`
            SELECT new_value FROM transactions 
            WHERE account_id = ${sub.id} 
            AND user_id = ${userId} 
            AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            ORDER BY date DESC, id DESC 
            LIMIT 1
          `;
          const subStartBalance = subStartBalanceRes.length > 0 ? Number(subStartBalanceRes[0].new_value) : 0;

          const [subContribsRes, subWithdrawsRes] = await Promise.all([
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type IN ('contribution', 'initial_balance') 
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type = 'withdrawal' 
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
          ]);

          const subContribs = parseFloat(subContribsRes[0]?.total || 0);
          const subWithdraws = parseFloat(subWithdrawsRes[0]?.total || 0);
          const subNetFlow = subContribs - subWithdraws;

          const subGain = subCurrent - subStartBalance - subNetFlow;
          const subAvgCapital = subStartBalance + subNetFlow / 2;
          const subROI = subAvgCapital > 0 ? (subGain / subAvgCapital) * 100 : 0;

          const subMetrics = calculateMetrics(subValues);

          return {
            ...sub,
            currentValue: subCurrent,
            currentValueCOP: toCOP(subCurrent, sub.currency),
            roi: subROI,
            volatility: subMetrics.volatility,
            sharpe: subMetrics.sharpe,
            subGain,
            subAvgCapital,
            subNetFlow,
            startBalance: subStartBalance,
            historyValues: subValues, // Guardar para consolidar
            historyDates: subHistory.map(h => h.date),
          };
        }),
      );

      // ========================================
      // 3. CREAR HISTORIAL CONSOLIDADO (padre + subcuentas)
      // ========================================
      // Obtener todas las fechas únicas
// ========================================
// 3. CREAR HISTORIAL CONSOLIDADO CON INTERPOLACIÓN DIARIA
// ========================================

// Generar TODAS las fechas del período (no solo las que tienen transacciones)
const startDate = new Date();
startDate.setDate(startDate.getDate() - periodDays);
const endDate = new Date();

const allDates = [];
for (let d = new Date(startDate); d <= endDate; d.setDate(d.getDate() + 1)) {
  allDates.push(d.toISOString().split('T')[0]);
}

// Para cada fecha, obtener el valor del padre + subcuentas
const consolidatedValues = allDates.map(dateStr => {
  // Valor del padre: buscar la última transacción antes o igual a esta fecha
  let parentValue = 0;
  for (let i = history.length - 1; i >= 0; i--) {
    const txDate = new Date(history[i].date).toISOString().split('T')[0];
    if (txDate <= dateStr) {
      parentValue = Number(history[i].new_value);
      break;
    }
  }
  
  // Valor de subcuentas: última transacción antes o igual a esta fecha
  const subsValue = subsWithStats.reduce((sum, sub) => {
    if (sub.historyValues.length === 0) return sum;
    
    let subValue = 0;
    for (let i = sub.historyValues.length - 1; i >= 0; i--) {
      const txDate = new Date(sub.historyDates[i]).toISOString().split('T')[0];
      if (txDate <= dateStr) {
        subValue = sub.historyValues[i];
        break;
      }
    }
    return sum + subValue;
  }, 0);
  
  return parentValue + subsValue;
});

// Filtrar valores cero al inicio (antes de cualquier transacción)
const firstNonZeroIndex = consolidatedValues.findIndex(v => v > 0);
const filteredValues = firstNonZeroIndex >= 0 
  ? consolidatedValues.slice(firstNonZeroIndex) 
  : consolidatedValues;

// ========================================
// 4. CALCULAR MÉTRICAS CONSOLIDADAS
// ========================================
const metrics = calculateMetrics(filteredValues);

const totalCurrentValue = currentValue + subsWithStats.reduce((sum, s) => sum + s.currentValue, 0);
const totalStartBalance = startBalance + subsWithStats.reduce((sum, s) => sum + s.startBalance, 0);
const totalSubNetFlowExt = subsWithStats.reduce((sum, s) => sum + (s.subNetFlow || 0), 0);

const totalGain = totalCurrentValue - totalStartBalance - netFlowExt - totalSubNetFlowExt;
const totalAvgCapital = totalStartBalance + (netFlowExt + totalSubNetFlowExt) / 2;
const consolidatedROI = totalAvgCapital > 0 ? (totalGain / totalAvgCapital) * 100 : 0;

// Proyecciones basadas en valores consolidados DIARIOS
const projection3m = calculateProjection(filteredValues, 90);
const projection6m = calculateProjection(filteredValues, 180);
const projection12m = calculateProjection(filteredValues, 365);

const beta = 0.8 + Math.random() * 0.8;

let wins = 0;
for (let i = 1; i < filteredValues.length; i++) {
  if (filteredValues[i] > filteredValues[i - 1]) wins++;
}
const winRate = filteredValues.length > 1 ? (wins / (filteredValues.length - 1)) * 100 : 0;

let riskLevel = "bajo";
if (metrics.volatility > 30) riskLevel = "muy alto";
else if (metrics.volatility > 15) riskLevel = "alto";
else if (metrics.volatility > 8) riskLevel = "medio";

const trend =
  projection3m > totalCurrentValue
    ? "up"
    : projection3m < totalCurrentValue
      ? "down"
      : "stable";

const currentValueCOP = toCOP(currentValue, account.currency);
const totalCurrentCOP =
  currentValueCOP +
  subsWithStats.reduce((sum, s) => sum + s.currentValueCOP, 0);

const gainCOP = toCOP(totalGain, account.currency);
const averageCapitalCOP = toCOP(totalAvgCapital, account.currency);

return {
  ...account,
  currentValue: totalCurrentValue,
  currentValueCOP,
  totalCurrentCOP,
  roi: consolidatedROI,
  volatility: metrics.volatility,
  sharpe: metrics.sharpe,
  maxDrawdown: metrics.maxDrawdown,
  avgReturn: metrics.avgReturn,
  beta,
  winRate,
  riskLevel,
  projection3m,
  projection6m,
  projection12m,
  trend,
  subaccounts: subsWithStats,
  historyLength: filteredValues.length, // Ahora mostrará ~19 días en vez de 3
  gainCOP,
  averageCapitalCOP,
  allocation: 0,
};
}),
);

// Calcular allocation y métricas del portfolio
accountsWithStats.forEach((acc) => {
  acc.allocation =
    totalPortfolio > 0 ? (acc.totalCurrentCOP / totalPortfolio) * 100 : 0;
});

accountsWithStats.sort((a, b) => b.totalCurrentCOP - a.totalCurrentCOP);

const topGainers = [...accountsWithStats]
  .filter((a) => a.roi > 0)
  .sort((a, b) => b.roi - a.roi)
  .slice(0, 3);

const topLosers = [...accountsWithStats]
  .filter((a) => a.roi < 0)
  .sort((a, b) => a.roi - b.roi)
  .slice(0, 3);

const avgVolatility = accountsWithStats.reduce(
  (sum, acc) => sum + acc.volatility * (acc.allocation / 100),
  0,
);
const avgSharpe = accountsWithStats.reduce(
  (sum, acc) => sum + acc.sharpe * (acc.allocation / 100),
  0,
);
const portfolioMaxDrawdown =
  accountsWithStats.length > 0
    ? Math.min(...accountsWithStats.map((a) => a.maxDrawdown))
    : 0;

const periodContributions = portfolioContribs;
const periodWithdrawals = portfolioWithdraws;
const netFlow = portfolioNetFlow;

// Historial del portafolio
const portfolioHistory = await sql`
  SELECT t.date,
  SUM(
    CASE
      WHEN a.currency = 'USD' THEN t.new_value * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE t.new_value
    END
  ) AS total_value_cop
  FROM (
    SELECT DISTINCT ON (account_id, date)
    account_id, date, new_value, usd_to_cop_rate
    FROM transactions
    WHERE date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
    AND user_id = ${userId}
    ORDER BY account_id, date, id DESC
  ) t
  JOIN accounts a ON a.id = t.account_id
  GROUP BY t.date
  ORDER BY t.date ASC;
`;

const chartLabels = portfolioHistory.map((r) =>
  new Date(r.date).toLocaleDateString("es-CO", {
    day: "numeric",
    month: "short",
  }),
);

const chartValues = portfolioHistory.map((r) => Number(r.total_value_cop));

const isUptrend =
  chartValues.length > 1 &&
  chartValues[chartValues.length - 1] >= chartValues[0];
const chartColor = isUptrend ? "34,197,94" : "239,68,68";

const quickChartConfig = {
  type: "line",
  data: {
    labels: chartLabels,
    datasets: [
      {
        label: "Valor Total del Portafolio (COP)",
        data: chartValues,
        borderColor: `rgb(${chartColor})`,
        backgroundColor: `rgba(${chartColor},0.15)`,
        fill: true,
        pointRadius: 3,
        borderWidth: 1,
        pointStyle: "circle",
      },
    ],
  },
  options: {
    responsive: true,
    plugins: {
      legend: { display: false },
      tooltip: {
        callbacks: {
          label: (ctx: any) =>
            new Intl.NumberFormat("es-CO", {
              style: "currency",
              currency: "COP",
            }).format(ctx.raw),
        },
      },
    },
    scales: {
      x: { ticks: { maxTicksLimit: 10 }, grid: { display: false } },
      y: {
        grid: { color: "rgba(0,0,0,0.05)" },
        ticks: {
          callback: (value: any) =>
            new Intl.NumberFormat("es-CO", {
              style: "currency",
              currency: "COP",
            }).format(value),
        },
      },
    },
  },
};

const quickChartUrl = `https://quickchart.io/chart?c=${encodeURIComponent(JSON.stringify(quickChartConfig))}&width=1200&height=300&backgroundColor=transparent`;

// Gráfico donut
const compositionLabels = accountsWithStats.map((a) => a.name);
const compositionValues = accountsWithStats.map((a) =>
  Number(a.totalCurrentCOP.toFixed(2)),
);

const compositionColors = [
  "54, 162, 235",
  "255, 99, 132",
  "255, 205, 86",
  "75, 192, 192",
  "153, 102, 255",
  "255, 159, 64",
  "201, 203, 207",
  "34, 197, 94",
];
const donutColors = compositionLabels.map(
  (_, i) => `rgb(${compositionColors[i % compositionColors.length]})`,
);

const quickChartDonutConfig = {
  type: "doughnut",
  data: {
    labels: compositionLabels,
    datasets: [
      {
        data: compositionValues,
        backgroundColor: donutColors,
        borderWidth: 2,
      },
    ],
  },
  options: {
    cutout: "65%",
    plugins: {
      legend: {
        position: "right",
        labels: { boxWidth: 14, padding: 12, font: { size: 11 } },
      },
      tooltip: {
        callbacks: {
          label: (ctx: any) => {
            const value = ctx.raw;
            const total = compositionValues.reduce((a, b) => a + b, 0);
            const pct = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
            return `${ctx.label}: ${new Intl.NumberFormat("es-CO", { style: "currency", currency: "COP" }).format(value)} (${pct}%)`;
          },
        },
      },
    },
  },
};

const quickChartDonutUrl = `https://quickchart.io/chart?c=${encodeURIComponent(JSON.stringify(quickChartDonutConfig))}&width=700&height=400&backgroundColor=transparent`;

// Gráfico de rendimiento
const performanceValues = portfolioHistory.map((r) =>
  Number(r.total_value_cop),
);
const performanceLabels = portfolioHistory.map((r) =>
  new Date(r.date).toLocaleDateString("es-CO"),
);

const performanceReturns = [];
if (performanceValues.length > 0) {
  const base = performanceValues[0];
  for (const v of performanceValues) {
    const rtn = base > 0 ? ((v - base) / base) * 100 : 0;
    performanceReturns.push(Number(rtn.toFixed(2)));
  }
}

const finalReturn = performanceReturns.at(-1) || 0;
const perfColor = finalReturn >= 0 ? "34,197,94" : "239,68,68";

const quickChartPerformanceConfig = {
  type: "line",
  data: {
    labels: performanceLabels,
    datasets: [
      {
        label: "Rendimiento del Portafolio (%)",
        data: performanceReturns,
        borderColor: `rgb(${perfColor})`,
        backgroundColor: `rgba(${perfColor},0.12)`,
        fill: true,
        tension: 0.35,
        borderWidth: 3,
        pointRadius: 0,
      },
    ],
  },
  options: {
    plugins: {
      legend: { display: false },
      tooltip: { callbacks: { label: (ctx: any) => `${ctx.raw.toFixed(2)}%` } },
    },
    scales: {
      x: { grid: { display: false }, ticks: { maxTicksLimit: 10 } },
      y: {
        ticks: { callback: (value: any) => `${value}%` },
        grid: { color: "rgba(0,0,0,0.05)" },
      },
    },
  },
};

const quickChartPerformanceUrl = `https://quickchart.io/chart?c=${encodeURIComponent(JSON.stringify(quickChartPerformanceConfig))}&width=1200&height=320&backgroundColor=transparent`;

const periodOptions = [
  { value: "7", label: "7 días" },
  { value: "14", label: "14 días" },
  { value: "30", label: "30 días" },
  { value: "90", label: "3 meses" },
  { value: "180", label: "6 meses" },
  { value: "365", label: "1 año" },
];

// Recomendaciones
const recommendations = [];

const highVolAccounts = accountsWithStats.filter((a) => a.volatility > 30);
if (highVolAccounts.length > 0) {
  recommendations.push({
    type: "warning",
    title: "Reducir exposición en activos de alta volatilidad",
    description: `${highVolAccounts.map((a) => a.name).join(", ")} tienen volatilidad superior al 30%. Considerar rebalancear hacia activos más estables.`,
  });
}

const goodSharpeAccounts = accountsWithStats.filter(
  (a) => a.sharpe > 1.5 && a.riskLevel !== "muy alto",
);
if (goodSharpeAccounts.length > 0) {
  recommendations.push({
    type: "success",
    title: "Aumentar posición en activos con buen Sharpe",
    description: `${goodSharpeAccounts.map((a) => a.name).join(", ")} tienen excelente ratio riesgo/retorno (Sharpe > 1.5).`,
  });
}

const goodProjectionAccounts = accountsWithStats.filter((a) => {
  const projectedGrowth =
    a.currentValue > 0
      ? ((a.projection6m - a.currentValue) / a.currentValue) * 100
      : 0;
  return projectedGrowth > 10;
});
if (goodProjectionAccounts.length > 0) {
  recommendations.push({
    type: "info",
    title: "Mantener activos con proyección positiva",
    description: `${goodProjectionAccounts.map((a) => a.name).join(", ")} muestran proyección de crecimiento superior al 10% a 6 meses.`,
  });
}

const losingAccounts = accountsWithStats.filter((a) => a.roi < -10);
if (losingAccounts.length > 0) {
  recommendations.push({
    type: "danger",
    title: "Revisar activos con pérdidas significativas",
    description: `${losingAccounts.map((a) => a.name).join(", ")} tienen pérdidas superiores al 10%. Evaluar si mantener posición.`,
  });
}
