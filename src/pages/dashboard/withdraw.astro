---
// src/pages/withdraw.astro
import Layout from "@layouts/default.astro";
import { asRows, sql } from "@lib/db";

const userId = Astro.locals.userId;

if (!userId) {
  return Astro.redirect("/auth/login?returnTo=/dashboard/withdraw");
}

// Obtener cuentas disponibles
const accounts = asRows<{
  id: number;
  name: string;
  balance: number;
  currency: string;
}>(
  await sql`
    SELECT 
      a.id,
      a.name,
      a.currency,
      COALESCE(pv.amount, 0) as balance
    FROM accounts a
    LEFT JOIN LATERAL (
      SELECT amount
      FROM transactions
      WHERE account_id = a.id
      AND user_id = ${userId}
      ORDER BY date DESC
      LIMIT 1
    ) pv ON true
    WHERE a.currency IN ('COP', 'USD')
    AND a.user_id = ${userId}
    ORDER BY a.name;
  `,
);

// Obtener parÃ¡metros de URL para mostrar mensajes
const url = new URL(Astro.request.url);
const withdrawSuccess = url.searchParams.get("withdraw_success");
const errorMessage = url.searchParams.get("error");

// Fecha actual por defecto (hora de Colombia)
const today = new Date().toLocaleDateString("en-CA", {
  timeZone: "America/Bogota",
});
---

<Layout title="Retirar Fondos" activePage="withdraw">
    <div class="max-w-2xl mx-auto space-y-4 sm:space-y-6">
      <!-- Header -->
      <div class="mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
          Retirar Fondos
        </h1>
        <p class="mt-2 text-sm sm:text-base text-gray-600">
          Realiza un retiro de tu portafolio
        </p>
      </div>

      <!-- Mensajes de Ã©xito/error -->
      { withdrawSuccess === "1" && (
          <div class="mb-4 sm:mb-6 bg-green-50 border border-green-200 rounded-lg p-3 sm:p-4">
            <div class="flex">
              <svg
                class="h-5 w-5 text-green-400 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800">
                  Â¡Retiro realizado exitosamente!
                </p>
              </div>
            </div>
          </div>
      )}
      { withdrawSuccess === "0" && (
          <div class="mb-4 sm:mb-6 bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
            <div class="flex">
              <svg
                class="h-5 w-5 text-red-400 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"
                />
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800">
                  Error al realizar el retiro
                </p>
                {errorMessage && (
                  <p class="mt-1 text-sm text-red-700">
                    {decodeURIComponent(errorMessage)}
                  </p>
                )}
              </div>
            </div>
          </div>
      )}

      <!-- Formulario de retiro -->
      <div class="bg-white shadow-sm rounded-lg border border-gray-200">
        <form
          method="POST"
          action="/api/transactions/withdraw"
          class="p-4 sm:p-6 space-y-4 sm:space-y-6"
        >
          <!-- Cuenta -->
          <div>
            <label
              for="account_id"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Cuenta <span class="text-red-500">*</span>
            </label>
            <select
              id="account_id"
              name="account_id"
              required
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent transition text-sm sm:text-base"
            >
              <option value="">Selecciona una cuenta</option>
              {
                accounts.map((account) => (
                  <option value={account.id}>
                    {account.name} ({account.currency}) - Balance: $
                    {account.balance.toLocaleString("en-US", {
                      minimumFractionDigits: 2,
                      maximumFractionDigits: 2,
                    })}
                  </option>
                ))
              }
            </select>
          </div>

          <!-- Fecha -->
          <div>
            <label
              for="date"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Fecha <span class="text-red-500">*</span>
            </label>
            <input
              type="date"
              id="date"
              name="date"
              value={today}
              required
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent transition text-sm sm:text-base"
            />
          </div>

          <!-- Monto -->
          <div>
            <label
              for="amount"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Monto a retirar <span class="text-red-500">*</span>
            </label>
            <div class="relative">
              <span
                class="absolute left-3 sm:left-4 top-2.5 text-gray-500 text-sm sm:text-base"
                >$</span
              >
              <input
                type="number"
                id="amount"
                name="amount"
                step="0.01"
                min="0.01"
                placeholder="0.00"
                required
                class="w-full pl-7 sm:pl-8 pr-3 sm:pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent transition text-sm sm:text-base"
              />
            </div>
            <p class="mt-1 text-xs text-gray-500">
              Ingresa el monto que deseas retirar
            </p>
          </div>

          <!-- Nota -->
          <div>
            <label
              for="note"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Nota (opcional)
            </label>
            <textarea
              id="note"
              name="note"
              rows="3"
              placeholder="Describe el motivo del retiro..."
              class="w-full px-3 sm:px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent transition resize-none text-sm sm:text-base"
            ></textarea>
          </div>

          <!-- Advertencia -->
          <div
            class="bg-amber-50 border border-amber-200 rounded-lg p-3 sm:p-4"
          >
            <div class="flex">
              <svg
                class="h-5 w-5 text-amber-400 shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                  clip-rule="evenodd"></path>
              </svg>
              <div class="ml-3">
                <p class="text-xs sm:text-sm text-amber-800">
                  AsegÃºrate de tener fondos suficientes en la cuenta
                  seleccionada.
                </p>
              </div>
            </div>
          </div>

          <!-- Botones -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4">
            <button
              type="submit"
              class="w-full sm:flex-1 bg-red-600 text-white px-6 py-2.5 sm:py-3 rounded-lg font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition text-sm sm:text-base"
            >
              Retirar Fondos
            </button>
            <a
              href="/dashboard"
              class="w-full sm:flex-1 bg-gray-100 text-gray-700 px-6 py-2.5 sm:py-3 rounded-lg font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition text-center text-sm sm:text-base"
            >
              Cancelar
            </a>
          </div>
        </form>
      </div>

      <!-- InformaciÃ³n adicional -->
      <div
        class="mt-4 sm:mt-6 bg-blue-50 border border-blue-200 rounded-lg p-3 sm:p-4"
      >
        <h3 class="text-sm font-medium text-blue-900 mb-2">
          ðŸ“‹ InformaciÃ³n sobre retiros
        </h3>
        <ul class="text-xs sm:text-sm text-blue-800 space-y-1">
          <li>â€¢ Los retiros se registran inmediatamente</li>
          <li>â€¢ El balance se actualiza automÃ¡ticamente</li>
          <li>â€¢ Los retiros quedan registrados en el historial</li>
        </ul>
      </div>
    </div>
</Layout>
<script is:inline>
  // ValidaciÃ³n adicional en el cliente
  const form = document.querySelector("form");
  const amountInput = document.getElementById("amount");
  const accountSelect = document.getElementById("account_id");

  form?.addEventListener("submit", (e) => {
    const amount = parseFloat(amountInput.value);
    const selectedOption = accountSelect.options[accountSelect.selectedIndex];
    const balanceText = selectedOption.text.match(/Balance: \$([\d,]+\.?\d*)/);

    if (balanceText) {
      const balance = parseFloat(balanceText[1].replace(/,/g, ""));

      if (amount > balance) {
        e.preventDefault();
        alert(
          `No puedes retirar $${amount.toFixed(2)}. El balance disponible es $${balance.toFixed(2)}`,
        );
      }
    }
  });
</script>
