---
import Layout from "@layouts/default.astro";

import { sql } from "@lib/db";

const userId = Astro.locals.userId;

if (!userId) {
  // Asegúrate de que solo los usuarios logueados puedan acceder
  return Astro.redirect("/auth/login?returnTo=/dashboard/update-rate");
}

const role = await sql`SELECT role FROM users WHERE id = ${userId} limit 1`;

let message: { type: "success" | "error"; text: string } | null = null;
let latestRate = "N/A";
let latestDate = "N/A";

// Obtener la tasa de cambio actual para mostrar
const rates = await sql`
  SELECT usd_to_cop, date
  FROM exchange_rates
  ORDER BY date DESC
  LIMIT 1;
`;

if (rates.length > 0) {
  latestRate = Number(rates[0].usd_to_cop).toLocaleString("es-CO");
  latestDate = new Date(rates[0].date).toLocaleDateString("es-CO", {
    dateStyle: "medium",
  });
}

// Obtener el historial completo de tasas de cambio
const rateHistory = await sql`
  SELECT usd_to_cop, date
  FROM exchange_rates
  ORDER BY date DESC;
`;

// ----------------------
// Manejo de la Petición POST
// ----------------------
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const newRate = formData.get("new_rate");
    const dateStr = formData.get("rate_date");

    if (!newRate || !dateStr) {
      throw new Error("El valor de la tasa y la fecha son obligatorios.");
    }

    const rateValue = Number(newRate);
    if (isNaN(rateValue) || rateValue <= 0) {
      throw new Error("La tasa de cambio debe ser un número positivo.");
    }

    // Insertar el nuevo valor en la tabla exchange_rates
    await sql`
      INSERT INTO exchange_rates (date, usd_to_cop)
      VALUES (${dateStr}, ${rateValue});
    `;

    // Redirigir para limpiar el formulario y mostrar el mensaje de éxito
    return Astro.redirect("/dashboard/exchange?success=1", 303);
  } catch (e) {
    console.error("Error al actualizar la tasa de cambio:", e);
    const errorMsg =
      e instanceof Error
        ? e.message
        : "Error desconocido al procesar la solicitud.";
    // Redirigir con mensaje de error
    return Astro.redirect(
      `/dashboard/exchange?error=${encodeURIComponent(errorMsg)}`,
      303,
    );
  }
}

// ----------------------
// Manejo de Mensajes de URL
// ----------------------
const urlSuccess = Astro.url.searchParams.get("success");
const urlError = Astro.url.searchParams.get("error");

if (urlSuccess === "1") {
  message = {
    type: "success",
    text: "Tasa de cambio actualizada correctamente.",
  };
} else if (urlError) {
  message = { type: "error", text: decodeURIComponent(urlError) };
}

// Fecha actual (hora de Colombia)
const today = new Date().toLocaleDateString("en-CA", {
  timeZone: "America/Bogota",
});
---

<Layout title="Actualizar Tasa de Cambio" activePage="exchange">
  <div class="max-w-3xl mx-auto space-y-4 sm:space-y-6">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
        Actualizar Tasa de Cambio (USD/COP)
      </h1>
      <p class="text-sm sm:text-base text-gray-600 mt-1">
        Registra el último valor del dólar para que los cálculos del portafolio
        se actualicen.
      </p>
    </div>

    {
      message && (
        <div
          class={`p-3 sm:p-4 rounded-lg border ${message.type === "success" ? "bg-green-50 border-green-200" : "bg-red-50 border-red-200"}`}
        >
          <p
            class={`text-sm font-medium ${message.type === "success" ? "text-green-800" : "text-red-800"}`}
          >
            {message.text}
          </p>
        </div>
      )
    }

    <div
      class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6"
    >
      <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4">
        Tasa Registrada Actualmente
      </h3>
      <p class="text-xl sm:text-2xl font-bold text-gray-900 mt-2">
        $1 USD = ${latestRate} COP
      </p>
      <p class="text-xs sm:text-sm text-gray-500 mt-1">
        Ultimo Registro: {latestDate}
      </p>
    </div>
    {
      role[0].role === import.meta.env.ROLE_ADMIN ? (
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6">
          <form method="POST" class="space-y-4">
            <div>
              <label
                for="rate_date"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Fecha de la Tasa
              </label>
              <input
                type="date"
                id="rate_date"
                name="rate_date"
                required
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base"
                value={today}
              />
            </div>
            <div>
              <label
                for="new_rate"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Valor USD a COP (Ej: 3950.50)
              </label>
              <input
                type="number"
                id="new_rate"
                name="new_rate"
                step="0.01"
                min="0.01"
                required
                placeholder="Ejemplo: 3950.50"
                class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500 text-sm sm:text-base"
              />
            </div>
            <button
              type="submit"
              class="w-full flex justify-center py-2.5 sm:py-3 px-4 border border-transparent rounded-md shadow-sm text-sm sm:text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition"
            >
              Guardar
            </button>
          </form>
        </div>
      ) : (
        ""
      )
    }

    <!-- Gráfico de Historial -->
    <div
      class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6"
    >
      <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4">
        Evolución de la Tasa de Cambio
      </h3>
      <div class="w-full overflow-x-auto">
        <img
          id="exchange-chart"
          src="/api/graphics/usd_rate"
          alt="Gráfico de historial USD/COP"
          class="w-full h-auto rounded-lg"
          loading="lazy"
        />
      </div>
    </div>

    <!-- Historial de Tasas de Cambio -->
    <div
      class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6"
    >
      <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-3 sm:mb-4">
        Historial de Tasas de Cambio
      </h3>
      {
        rateHistory.length > 0 ? (
          <div class="overflow-x-auto -mx-4 sm:mx-0">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Fecha
                  </th>
                  <th class="px-3 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Tasa USD/COP
                  </th>
                  <th class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Cambio
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {rateHistory.slice(0, 31).map((rate, index) => {
                  const currentRate = Number(rate.usd_to_cop);
                  const previousRate =
                    index < rateHistory.length - 1
                      ? Number(rateHistory[index + 1].usd_to_cop)
                      : null;
                  const change = previousRate
                    ? currentRate - previousRate
                    : null;
                  const changePercent = previousRate
                    ? ((change! / previousRate) * 100).toFixed(2)
                    : null;

                  return (
                    <tr class="hover:bg-gray-50">
                      <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-gray-900">
                        <div class="hidden sm:block">
                          {new Date(rate.date).toLocaleDateString("es-CO", {
                            dateStyle: "medium",
                          })}
                        </div>
                        <div class="sm:hidden">
                          {new Date(rate.date).toLocaleDateString("es-CO", {
                            day: "2-digit",
                            month: "2-digit",
                            year: "2-digit",
                          })}
                        </div>
                      </td>
                      <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm font-medium text-gray-900">
                        <div>
                          $
                          {currentRate.toLocaleString("es-CO", {
                            minimumFractionDigits: 0,
                            maximumFractionDigits: 0,
                          })}
                        </div>
                        <div class="sm:hidden text-xs mt-1">
                          {change !== null ? (
                            <span
                              class={`inline-flex items-center gap-1 ${change >= 0 ? "text-green-600" : "text-red-600"}`}
                            >
                              {change >= 0 ? "↑" : "↓"}
                              {Math.abs(change).toLocaleString("es-CO", {
                                minimumFractionDigits: 0,
                                maximumFractionDigits: 0,
                              })}
                              <span class="text-xs">({changePercent}%)</span>
                            </span>
                          ) : (
                            <span class="text-gray-400 text-xs">
                              Primera tasa
                            </span>
                          )}
                        </div>
                      </td>
                      <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm">
                        {change !== null ? (
                          <span
                            class={`inline-flex items-center gap-1 ${change >= 0 ? "text-green-600" : "text-red-600"}`}
                          >
                            {change >= 0 ? "↑" : "↓"}
                            {Math.abs(change).toLocaleString("es-CO", {
                              minimumFractionDigits: 2,
                              maximumFractionDigits: 2,
                            })}
                            <span class="text-xs">({changePercent}%)</span>
                          </span>
                        ) : (
                          <span class="text-gray-400 text-xs">
                            Primera tasa
                          </span>
                        )}
                      </td>
                    </tr>
                  );
                })}
              </tbody>
            </table>
          </div>
        ) : (
          <p class="text-gray-500 text-sm">
            No hay tasas de cambio registradas aún.
          </p>
        )
      }
    </div>
  </div>
</Layout>
