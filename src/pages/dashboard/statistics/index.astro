<script is:inline>
  const periodFilter = document.getElementById("period-filter");
  periodFilter?.addEventListener("change", (e) => {
    const target = e.target;
    const newPeriod = target.value;
    const url = new URL(window.location.href);
    url.searchParams.set("period", newPeriod);
    window.location.href = url.toString();
  });

  // Ordenamiento del portfolio
  const sortSelect = document.getElementById("sort-portfolio");
  const portfolioContainer = document.getElementById("portfolio-distribution");
  
  if (sortSelect && portfolioContainer) {
    sortSelect.addEventListener("change", (e) => {
      const sortBy = e.target.value;
      const items = Array.from(portfolioContainer.children);
      
      items.sort((a, b) => {
        if (sortBy === "size") {
          return parseFloat(b.dataset.allocation) - parseFloat(a.dataset.allocation);
        } else if (sortBy === "roi") {
          return parseFloat(b.dataset.roi) - parseFloat(a.dataset.roi);
        } else if (sortBy === "risk") {
          return parseFloat(b.dataset.risk) - parseFloat(a.dataset.risk);
        }
        return 0;
      });
      
      // Limpiar y re-agregar en nuevo orden
      portfolioContainer.innerHTML = "";
      items.forEach(item => portfolioContainer.appendChild(item));
    });
  }
</script>
