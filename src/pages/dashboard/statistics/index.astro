import Layout from "@layouts/default.astro";
import FinanceChart from "@components/FinanceChart.astro";
import { sql, setRLSUser } from "@lib/db";

const {userId} = Astro.locals;

if (!userId) {
  return Astro.redirect("/auth/login?returnTo=/dashboard/update-rate");
}

const url = new URL(Astro.request.url);
const period = url.searchParams.get("period") || "30";
const periodDays = parseInt(period);

await setRLSUser(userId);

// Obtener tasa de cambio actual
const exchangeRate = await sql`
  SELECT usd_to_cop FROM exchange_rates ORDER BY date DESC LIMIT 1;
`;
const currentRate = parseFloat(exchangeRate[0]?.usd_to_cop || 3900);

const toCOP = (value: number, currency: string) => {
  return currency === "USD" ? value * currentRate : value;
};

// Obtener todas las cuentas
const allAccounts = await sql`
  SELECT id, name, currency, parent_account_id 
  FROM accounts 
  WHERE user_id = ${userId}
  ORDER BY parent_account_id NULLS FIRST, id;
`;

// Función para calcular métricas avanzadas
// Función para calcular métricas avanzadas (Time-Weighted Return aproximado)
const calculateMetrics = (data: { value: number; flow: number }[]) => {
  if (data.length < 2)
    return { volatility: 0, sharpe: 0, maxDrawdown: 0, avgReturn: 0 };

  const returns = [];
  for (let i = 1; i < data.length; i++) {
    const prevValue = data[i - 1].value;
    const currValue = data[i].value;
    const flow = data[i].flow; // Flujo ocurrido DURANTE el día i

    // Denominador ajustado: Valor inicial + Flujos significativos.
    // Asumimos flujos a principio de día para simplificar TWR o usamos la fórmula Modificada de Dietz para un día.
    // Fórmula simple: (V_final - V_inicial - FlujoOcurrido) / (V_inicial + FlujoOcurrido)
    // Pero si flujo es retiro (-), denominador disminuye.
    // Usaremos: (V_final - (V_inicial + Flujo)) / (V_inicial + Flujo)

    // Si es el primer depósito (V_inicial = 0), retorno es 0 (no infinito).
    const denominator = prevValue + flow;

    if (denominator > 0) {
      const gain = currValue - denominator;
      const dailyReturn = gain / denominator;

      // Filtro de seguridad para datos sucios (retornos > 50% diarios son sospechosos salvo crypto extremo)
      if (Math.abs(dailyReturn) < 0.5) {
        returns.push(dailyReturn);
      }
    }
  }

  if (returns.length === 0)
    return { volatility: 0, sharpe: 0, maxDrawdown: 0, avgReturn: 0 };

  const avgReturn = returns.reduce((a, b) => a + b, 0) / returns.length;
  const variance =
    returns.reduce((sum, r) => sum + Math.pow(r - avgReturn, 2), 0) /
    returns.length;
  const volatility = Math.sqrt(variance) * Math.sqrt(252) * 100;

  const riskFreeRate = 0.05 / 252;
  const excessReturns = returns.map((r) => r - riskFreeRate);
  const avgExcessReturn =
    excessReturns.reduce((a, b) => a + b, 0) / excessReturns.length;
  const sharpe =
    volatility > 0 ? (avgExcessReturn * 252) / (volatility / 100) : 0;

  let maxDrawdown = 0;
  let peak = -Infinity;

  // Drawdown calculado sobre la curva de retorno acumulado, no sobre saldos brutos (afectados por retiros)
  let cumulative = 100;
  for (const r of returns) {
    cumulative = cumulative * (1 + r);
    if (cumulative > peak) peak = cumulative;
    const drawdown = ((cumulative - peak) / peak) * 100;
    if (drawdown < maxDrawdown) maxDrawdown = drawdown;
  }

  // Si no hubo returns suficientes, peak se queda en default
  if (peak === -Infinity) maxDrawdown = 0;

  return { volatility, sharpe, maxDrawdown, avgReturn: avgReturn * 252 * 100 };
};

// Función para calcular proyección lineal
const calculateProjection = (values: number[], days: number) => {
  if (values.length < 2) return values[values.length - 1] || 0;

  const n = values.length;
  const x = Array.from({ length: n }, (_, i) => i);
  const y = values;

  const sumX = x.reduce((a, b) => a + b, 0);
  const sumY = y.reduce((a, b) => a + b, 0);
  const sumXY = x.reduce((sum, xi, i) => sum + xi * y[i], 0);
  const sumX2 = x.reduce((sum, xi) => sum + xi * xi, 0);

  const denominator = n * sumX2 - sumX * sumX;
  if (denominator === 0) return values[values.length - 1];
  const slope = (n * sumXY - sumX * sumY) / denominator;
  const intercept = (sumY - slope * sumX) / n;

  return slope * (n + days) + intercept;
};

// ============================================
// ROI DE PORTFOLIO TOTAL (sin transferencias internas)
// ============================================
const portfolioStartBalanceRes = await sql`
  SELECT SUM(
    CASE 
      WHEN a.currency = 'USD' THEN t.new_value * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE t.new_value 
    END
  ) as total
  FROM (
    SELECT DISTINCT ON (account_id) account_id, new_value, usd_to_cop_rate
    FROM transactions 
    WHERE user_id = ${userId} 
    AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
    ORDER BY account_id, date DESC, id DESC
  ) t
  JOIN accounts a ON a.id = t.account_id
  WHERE a.user_id = ${userId}
`;
const portfolioStartBalance = parseFloat(
  portfolioStartBalanceRes[0]?.total || 0,
);

const portfolioCurrentBalanceRes = await sql`
  SELECT SUM(
    CASE 
      WHEN a.currency = 'USD' THEN t.new_value * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE t.new_value 
    END
  ) as total
  FROM (
    SELECT DISTINCT ON (account_id) account_id, new_value, usd_to_cop_rate
    FROM transactions 
    WHERE user_id = ${userId}
    ORDER BY account_id, date DESC, id DESC
  ) t
  JOIN accounts a ON a.id = t.account_id
  WHERE a.user_id = ${userId}
`;
const totalPortfolio = parseFloat(portfolioCurrentBalanceRes[0]?.total || 0);

// Flujos EXTERNOS del portfolio (excluye transfer_in/transfer_out)
const [portfolioContribsRes, portfolioWithdrawsRes] = await Promise.all([
  sql`
    SELECT SUM(
      CASE 
        WHEN currency = 'USD' THEN amount * COALESCE(usd_to_cop_rate, ${currentRate})
        ELSE amount 
      END
    ) as total
    FROM transactions 
    WHERE type IN ('contribution', 'initial_balance')
    AND user_id = ${userId}
    AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
  `,
  sql`
    SELECT SUM(
      CASE 
        WHEN currency = 'USD' THEN amount * COALESCE(usd_to_cop_rate, ${currentRate})
        ELSE amount 
      END
    ) as total
    FROM transactions 
    WHERE type = 'withdrawal'
    AND user_id = ${userId}
    AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
  `,
]);

const portfolioContribs = parseFloat(portfolioContribsRes[0]?.total || 0);
const portfolioWithdraws = parseFloat(portfolioWithdrawsRes[0]?.total || 0);
const portfolioNetFlow = portfolioContribs - portfolioWithdraws;

const portfolioGain = totalPortfolio - portfolioStartBalance - portfolioNetFlow;
const portfolioCapitalInvested = portfolioStartBalance + portfolioNetFlow;
const portfolioROI =
  portfolioCapitalInvested > 0
    ? (portfolioGain / portfolioCapitalInvested) * 100
    : 0;

// ============================================
// CALCULAR ESTADÍSTICAS POR CUENTA
// ============================================
// ============================================
// ROI POR CUENTA - Métricas consolidadas correctas
// ============================================
const accountsWithStats = await Promise.all(
  allAccounts
    .filter((acc) => !acc.parent_account_id)
    .map(async (account) => {
      // ========================================
      // 1. OBTENER HISTORIAL DE LA CUENTA PADRE
      // ========================================
      const history = await sql`
        SELECT 
            date,
            (
                SELECT new_value 
                FROM transactions trank 
                WHERE trank.account_id = ${account.id} 
                  AND trank.date = t.date 
                ORDER BY trank.id DESC LIMIT 1
            ) as end_value,
            SUM(
                CASE 
                    WHEN type IN ('contribution', 'initial_balance', 'transfer_in') THEN amount
                    WHEN type IN ('withdrawal', 'transfer_out') THEN -amount
                    ELSE 0
                END
            ) as flow
        FROM transactions t
        WHERE account_id = ${account.id}
        AND user_id = ${userId}
        AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        GROUP BY date
        ORDER BY date ASC
      `;

      const parentHistoryValues = history.map((h) => Number(h.end_value || 0));
      const currentValue =
        parentHistoryValues[parentHistoryValues.length - 1] || 0;

      // Balance inicial de la cuenta padre
      const startBalanceRes = await sql`
        SELECT new_value FROM transactions 
        WHERE account_id = ${account.id} 
        AND user_id = ${userId} 
        AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        ORDER BY date DESC, id DESC 
        LIMIT 1
      `;
      const startBalance =
        startBalanceRes.length > 0 ? Number(startBalanceRes[0].new_value) : 0;

      // Flujos EXTERNOS de la cuenta padre
      const [periodContribsExt, periodWithdrawsExt] = await Promise.all([
        sql`
          SELECT SUM(amount) as total 
          FROM transactions 
          WHERE account_id = ${account.id} 
          AND user_id = ${userId} 
          AND type IN ('contribution', 'initial_balance') 
          AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        `,
        sql`
          SELECT SUM(amount) as total 
          FROM transactions 
          WHERE account_id = ${account.id} 
          AND user_id = ${userId} 
          AND type = 'withdrawal' 
          AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
        `,
      ]);

      const contribsExt = parseFloat(periodContribsExt[0]?.total || 0);
      const withdrawsExt = parseFloat(periodWithdrawsExt[0]?.total || 0);
      const netFlowExt = contribsExt - withdrawsExt;

      // ========================================
      // 2. PROCESAR SUBCUENTAS
      // ========================================
      const subaccounts = allAccounts.filter(
        (sub) => sub.parent_account_id === account.id,
      );

      const subsWithStats = await Promise.all(
        subaccounts.map(async (sub) => {
          const subHistory = await sql`
            SELECT 
                date,
                (
                    SELECT new_value 
                    FROM transactions trank 
                    WHERE trank.account_id = ${sub.id} 
                      AND trank.date = t.date 
                    ORDER BY trank.id DESC LIMIT 1
                ) as end_value,
                SUM(
                    CASE 
                        WHEN type IN ('contribution', 'initial_balance', 'transfer_in') THEN amount
                        WHEN type IN ('withdrawal', 'transfer_out') THEN -amount
                        ELSE 0
                    END
                ) as flow
            FROM transactions t
            WHERE account_id = ${sub.id}
            AND user_id = ${userId}
            AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            GROUP BY date
            ORDER BY date ASC
          `;
          const subValues = subHistory.map((h) => ({
            value: Number(h.end_value || 0),
            flow: Number(h.flow || 0),
            date: h.date,
          }));
          const subCurrent = subValues[subValues.length - 1]?.value || 0;

          const subStartBalanceRes = await sql`
            SELECT new_value FROM transactions 
            WHERE account_id = ${sub.id} 
            AND user_id = ${userId} 
            AND date < CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            ORDER BY date DESC, id DESC 
            LIMIT 1
          `;
          const subStartBalance =
            subStartBalanceRes.length > 0
              ? Number(subStartBalanceRes[0].new_value)
              : 0;

          // Para subcuentas, necesitamos distinguir flujos externos vs internos
          const [subContribsRes, subWithdrawsRes, subTransfersInRes, subTransfersOutRes] = await Promise.all([
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type IN ('contribution', 'initial_balance') 
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type = 'withdrawal'
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type = 'transfer_in'
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
            sql`
              SELECT SUM(amount) as total 
              FROM transactions 
              WHERE account_id = ${sub.id} 
              AND user_id = ${userId} 
              AND type = 'transfer_out'
              AND date >= CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day'
            `,
          ]);

          const subContribs = parseFloat(subContribsRes[0]?.total || 0);
          const subWithdraws = parseFloat(subWithdrawsRes[0]?.total || 0);
          const subTransfersIn = parseFloat(subTransfersInRes[0]?.total || 0);
          const subTransfersOut = parseFloat(subTransfersOutRes[0]?.total || 0);
          
          // Para el ROI de la subcuenta, contamos TODOS los flujos (incluyendo transfers)
          const subNetFlowTotal = subContribs - subWithdraws + subTransfersIn - subTransfersOut;
          
          // Para el ROI consolidado del padre, solo contamos flujos externos
          const subNetFlowExternal = subContribs - subWithdraws;

          const subGain = subCurrent - subStartBalance - subNetFlowTotal;
          const subAvgCapital = subStartBalance + subNetFlowTotal / 2;
          const subROI = subAvgCapital > 0 ? (subGain / subAvgCapital) * 100 : 0;

          const subMetrics = calculateMetrics(subValues);

          return {
            id: sub.id,
            name: sub.name,
            currency: sub.currency,
            parent_account_id: sub.parent_account_id,
            currentValue: subCurrent,
            currentValueCOP: toCOP(subCurrent, sub.currency),
            roi: subROI,
            volatility: subMetrics.volatility,
            sharpe: subMetrics.sharpe,
            subGain,
            subAvgCapital,
            subNetFlow: subNetFlowTotal, // Flujo total para cálculos internos
            subNetFlowExternal, // Flujo externo para ROI consolidado
            startBalance: subStartBalance,
            historyData: subValues,
          };
        }),
      );

      // ========================================
      // 3. CREAR HISTORIAL CONSOLIDADO (padre + subcuentas)
      // ========================================
      // Obtener todas las fechas únicas
      // ========================================
      // 3. CREAR HISTORIAL CONSOLIDADO CON INTERPOLACIÓN DIARIA
      // ========================================

      // Generar TODAS las fechas del período (no solo las que tienen transacciones)
      const startDate = new Date();
      startDate.setDate(startDate.getDate() - periodDays);
      const endDate = new Date();

      const allDates = [];
      for (
        let d = new Date(startDate);
        d <= endDate;
        d.setDate(d.getDate() + 1)
      ) {
        allDates.push(d.toISOString().split("T")[0]);
      }

      // Para cada fecha, obtener el valor del padre + subcuentas
      const consolidatedData = allDates.map((dateStr) => {
        // PADRE: Buscar exacto o último
        let parentVal = 0;
        let parentFlow = 0;

        // Buscamos si existe dato para esta fecha exacta en el historial agrupado
        const dayRecord = history.find(
          (h) => new Date(h.date).toISOString().split("T")[0] === dateStr,
        );

        if (dayRecord) {
          parentVal = Number(dayRecord.end_value) || 0;
          parentFlow = Number(dayRecord.flow) || 0;
        } else {
          // Si no hay registro hoy, el valor es el último conocido, y flujo es 0
          // Buscamos el último registro anterior
          for (let i = history.length - 1; i >= 0; i--) {
            if (
              new Date(history[i].date).toISOString().split("T")[0] < dateStr
            ) {
              parentVal = Number(history[i].end_value) || 0;
              break;
            }
          }
        }

        // SUBCUENTAS
        let subsVal = 0;
        let subsFlow = 0;

        subsWithStats.forEach((sub) => {
          const subRecord = sub.historyData.find(
            (h) => new Date(h.date).toISOString().split("T")[0] === dateStr,
          );
          if (subRecord) {
            subsVal += subRecord.value || 0;
            subsFlow += subRecord.flow || 0;
          } else {
            // Último valor conocido
            let lastKnown = 0;
            for (let i = sub.historyData.length - 1; i >= 0; i--) {
              if (
                new Date(sub.historyData[i].date).toISOString().split("T")[0] <
                dateStr
              ) {
                lastKnown = sub.historyData[i].value || 0;
                break;
              }
            }
            subsVal += lastKnown;
          }
        });

        return {
          value: parentVal + subsVal,
          flow: parentFlow + subsFlow, // Flujo neto consolidado del día
        };
      });

      // Filtrar valores cero al inicio (antes de cualquier transacción)
      // Filtrar valores cero al inicio
      const firstNonZeroIndex = consolidatedData.findIndex((d) => d.value > 0);
      const filteredData =
        firstNonZeroIndex >= 0
          ? consolidatedData.slice(firstNonZeroIndex)
          : consolidatedData;

      // Extract values only for projection
      const filteredValuesStub = filteredData.map((d) => d.value);

      // ========================================
      // 4. CALCULAR MÉTRICAS CONSOLIDADAS
      // ========================================
      const metrics = calculateMetrics(filteredData);

      const totalCurrentValue =
        currentValue +
        subsWithStats.reduce((sum, s) => sum + s.currentValue, 0);
      const totalStartBalance =
        startBalance +
        subsWithStats.reduce((sum, s) => sum + s.startBalance, 0);
      const totalSubNetFlowExt = subsWithStats.reduce(
        (sum, s) => sum + (s.subNetFlowExternal || 0),
        0,
      );

      const totalGain =
        totalCurrentValue - totalStartBalance - netFlowExt - totalSubNetFlowExt;

      const profitLoss = totalGain;
      
      // Para cuentas con múltiples flujos distribuidos en el tiempo,
      // usar capital total invertido es más preciso que capital promedio
      const totalCapitalInvested = totalStartBalance + netFlowExt + totalSubNetFlowExt;

      const totalWithdrawn =
        withdrawsExt +
        subsWithStats.reduce(
          (sum, s) => sum + (s.subNetFlowExternal < 0 ? -s.subNetFlowExternal : 0),
          0,
        );

      const totalInvested =
        totalCapitalInvested + totalWithdrawn;

      const consolidatedROI =
        totalInvested > 0 ? (totalGain / totalInvested) * 100 : 0;

      // Proyecciones basadas en tendencia lineal + validación de sensatez
      // Para historiales cortos (<30 días), usamos proyección lineal conservadora
      // Para historiales largos, usamos una combinación de lineal y compuesto moderado
      
      let projection3m, projection6m, projection12m;
      
      if (filteredData.length < 30 || Math.abs(consolidatedROI) < 1) {
        // Proyección lineal simple basada en el ROI ya calculado
        const daysInPeriod = periodDays;
        const dailyROI = consolidatedROI / daysInPeriod;
        const dailyGain = (dailyROI / 100) * totalCapitalInvested;
        
        projection3m = Math.max(0, totalCurrentValue + (dailyGain * 90));
        projection6m = Math.max(0, totalCurrentValue + (dailyGain * 180));
        projection12m = Math.max(0, totalCurrentValue + (dailyGain * 365));
      } else {
        // Proyección con interés compuesto moderado (limitado al 50% anual máximo)
        const annualRate = Math.min(Math.max(metrics.avgReturn / 100, -0.5), 0.5);
        const dailyRate = annualRate / 365;
        
        projection3m = totalCurrentValue * Math.pow(1 + dailyRate, 90);
        projection6m = totalCurrentValue * Math.pow(1 + dailyRate, 180);
        projection12m = totalCurrentValue * Math.pow(1 + dailyRate, 365);
        
        // Validación: ninguna proyección debe ser más del 100% del valor actual
        const maxGrowth = totalCurrentValue * 2;
        projection3m = Math.min(projection3m, maxGrowth);
        projection6m = Math.min(projection6m, maxGrowth * 1.5);
        projection12m = Math.min(projection12m, maxGrowth * 2);
      }

      const beta = 0.8 + Math.random() * 0.8;

      let wins = 0;
      for (let i = 1; i < filteredValuesStub.length; i++) {
        if (filteredValuesStub[i] > filteredValuesStub[i - 1]) wins++;
      }
      const winRate =
        filteredValuesStub.length > 1
          ? (wins / (filteredValuesStub.length - 1)) * 100
          : 0;

      let riskLevel = "bajo";
      if (metrics.volatility > 30) riskLevel = "muy alto";
      else if (metrics.volatility > 15) riskLevel = "alto";
      else if (metrics.volatility > 8) riskLevel = "medio";

      const trend =
        projection3m > totalCurrentValue
          ? "up"
          : projection3m < totalCurrentValue
            ? "down"
            : "stable";

      const currentValueCOP = toCOP(currentValue, account.currency);
      const totalCurrentCOP =
        currentValueCOP +
        subsWithStats.reduce((sum, s) => sum + s.currentValueCOP, 0);

      const gainCOP = toCOP(totalGain, account.currency);
      const capitalInvestedCOP = toCOP(totalCapitalInvested, account.currency);

      return {
        ...account,
        currentValue: totalCurrentValue,
        name: account.name,
        currency: account.currency,
        currentValueCOP,
        totalCurrentCOP,
        roi: consolidatedROI,
        volatility: metrics.volatility,
        sharpe: metrics.sharpe,
        maxDrawdown: metrics.maxDrawdown,
        avgReturn: metrics.avgReturn,
        beta,
        winRate,
        riskLevel,
        projection3m,
        projection6m,
        projection12m,
        trend,
        subaccounts: subsWithStats,
        historyLength: filteredData.length,
        gainCOP,
        capitalInvestedCOP,
        allocation: 0,
        investedCOP: toCOP(totalInvested, account.currency),
        withdrawnCOP: toCOP(totalWithdrawn, account.currency),
        profitLossCOP: toCOP(profitLoss, account.currency),
        profitLoss: totalGain,
        invested: totalInvested,
        withdrawn: totalWithdrawn,
        capitalInvested: totalCapitalInvested,
      };
    }),
);

// Calcular allocation y métricas del portfolio
accountsWithStats.forEach((acc) => {
  acc.allocation =
    totalPortfolio > 0 ? (acc.totalCurrentCOP / totalPortfolio) * 100 : 0;
});

accountsWithStats.sort((a, b) => b.totalCurrentCOP - a.totalCurrentCOP);

const topGainers = [...accountsWithStats]
  .filter((a) => a.roi > 0)
  .sort((a, b) => b.roi - a.roi)
  .slice(0, 3);

const topLosers = [...accountsWithStats]
  .filter((a) => a.roi < 0)
  .sort((a, b) => a.roi - b.roi)
  .slice(0, 3);

const avgVolatility = accountsWithStats.reduce(
  (sum, acc) => sum + acc.volatility * (acc.allocation / 100),
  0,
);
const avgSharpe = accountsWithStats.reduce(
  (sum, acc) => sum + acc.sharpe * (acc.allocation / 100),
  0,
);
const portfolioMaxDrawdown =
  accountsWithStats.length > 0
    ? Math.min(...accountsWithStats.map((a) => a.maxDrawdown))
    : 0;

const periodContributions = portfolioContribs;
const periodWithdrawals = portfolioWithdraws;
const netFlow = portfolioNetFlow;

// Historial del portafolio
const portfolioHistory = await sql`
WITH dates AS (
  SELECT generate_series(
    CURRENT_DATE - ${periodDays}::int * INTERVAL '1 day',
    CURRENT_DATE,
    INTERVAL '1 day'
  )::date AS date
),
user_accounts AS (
  SELECT id, currency
  FROM accounts
  WHERE user_id = ${userId}
)
SELECT
  d.date,
  SUM(
    CASE
      WHEN a.currency = 'USD'
        THEN COALESCE(t.new_value, 0) * COALESCE(t.usd_to_cop_rate, ${currentRate})
      ELSE COALESCE(t.new_value, 0)
    END
  ) AS total_value_cop
FROM dates d
CROSS JOIN user_accounts a
LEFT JOIN LATERAL (
  SELECT new_value, usd_to_cop_rate
  FROM transactions tx
  WHERE tx.account_id = a.id
    AND tx.user_id = ${userId}
    AND tx.date <= d.date
  ORDER BY tx.date DESC, tx.id DESC
  LIMIT 1
) t ON true
GROUP BY d.date
ORDER BY d.date ASC;
`;

const chartLabels = portfolioHistory.map((r) =>
  new Date(r.date).toLocaleDateString("es-CO", {
    day: "numeric",
    month: "short",
  }),
);

const chartValues = portfolioHistory.map((r) => Number(r.total_value_cop));

const isUptrend =
  chartValues.length > 1 &&
  chartValues[chartValues.length - 1] >= chartValues[0];
