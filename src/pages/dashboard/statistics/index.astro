---
import Layout from "@layouts/default.astro";
import FinanceChart from "@components/FinanceChart.astro";
import { 
  getDetailedPortfolioStats 
} from "@lib/finance";

const {userId} = Astro.locals;

if (!userId) {
  return Astro.redirect("/auth/login?returnTo=/dashboard/update-rate");
}

const url = new URL(Astro.request.url);
const period = url.searchParams.get("period") || "30";
const periodDays = parseInt(period);

// Obtener estadísticas consolidadas desde la librería
const stats = await getDetailedPortfolioStats(userId, periodDays);

const { 
  totalPortfolio, 
  portfolioROI, 
  volatility: avgVolatility, 
  sharpe: avgSharpe, 
  maxDrawdown: portfolioMaxDrawdown, 
  netFlow, 
  chartData: mainChartData, 
  accounts: accountsWithStats, 
  recommendations,
  currentRate,
  periodContributions,
  periodWithdrawals
} = stats;

// Preparar otros datos para vista
const topGainers = [...accountsWithStats]
  .filter((a) => a.roi > 0)
  .sort((a, b) => b.roi - a.roi)
  .slice(0, 3);

const topLosers = [...accountsWithStats]
  .filter((a) => a.roi < 0)
  .sort((a, b) => a.roi - b.roi)
  .slice(0, 3);

const donutChartData = {
  labels: accountsWithStats.map(a => a.name),
  datasets: [{
    data: accountsWithStats.map(a => Number(a.totalCurrentCOP.toFixed(2))),
    backgroundColor: ["#3b82f6","#10b981","#f59e0b","#ef4444","#8b5cf6","#ec4899","#6366f1","#64748b"],
    borderWidth: 0,
    hoverOffset: 4,
  }],
};

const periodOptions = [
  { value: "7", label: "7 días" },
  { value: "14", label: "14 días" },
  { value: "30", label: "30 días" },
  { value: "90", label: "3 meses" },
  { value: "180", label: "6 meses" },
  { value: "365", label: "1 año" },
];
---
<Layout title="Horizonte de Inversiones" activePage="Estadisticas">
  <div class="max-w-7xl mx-auto space-y-6">
    <!-- Header -->
    <div
      class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
    >
      <div>
        <h1 class="text-4xl font-bold text-slate-900 mb-2">
          Horizonte de Inversiones
        </h1>
        <p class="text-slate-600">
          Análisis avanzado y proyecciones de portafolio
        </p>
      </div>
      <div class="flex items-center gap-2">
        <label class="text-sm font-medium text-slate-700">Período:</label>
        <select
          id="period-filter"
          class="px-4 py-2 border border-slate-300 rounded-lg bg-white text-slate-900 font-medium hover:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors cursor-pointer"
        >
          {
            periodOptions.map((option) => (
              <option value={option.value} selected={period === option.value}>
                {option.label}
              </option>
            ))
          }
        </select>
      </div>
    </div>

    <!-- Gráfico Principal -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
      <div
        class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 gap-2"
      >
        <div>
          <h2 class="text-xl font-bold text-slate-900">
            Evolución del Valor Total del Portafolio
          </h2>
          <p class="text-sm text-slate-500">Últimos {periodDays} días</p>
        </div>
        <div
          class={`px-3 py-1 rounded-full text-xs font-semibold ${portfolioROI >= 0 ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700"}`}
        >
          {portfolioROI >= 0 ? "Tendencia positiva" : "Tendencia negativa"}
        </div>
      </div>
      <div class="w-full">
        <FinanceChart
          id="main-portfolio-chart"
          type="line"
          data={mainChartData}
          height="350px"
          options={{
            scales: {
              x: { grid: { display: false } },
              y: { grid: { color: "#f5f5f4" }, border: { display: false } },
            },
            plugins: { legend: { display: false } },
          }}
        />
      </div>
    </div>

    <!-- KPIs Principales -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium">
            Valor Total Portafolio
          </p>
          <span
            class={`text-xs px-2 py-1 rounded ${portfolioROI >= 0 ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700"}`}
          >
            {portfolioROI >= 0 ? "+" : ""}{portfolioROI.toFixed(2)}%
          </span>
        </div>
        <p class="text-3xl font-bold text-slate-900">
          {
            totalPortfolio.toLocaleString("es-CO", {
              minimumFractionDigits: 0,
              maximumFractionDigits: 2,
            })
          } COP
        </p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium flex items-center gap-1">
            Rentabilidad Ajustada
            <span class="group relative cursor-help">
              <svg
                class="w-4 h-4 text-slate-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span
                class="invisible group-hover:visible absolute left-0 top-6 w-64 bg-slate-800 text-white text-xs rounded p-2 z-10"
              >
                Mide qué tan bien compensa el retorno por el riesgo tomado.
                Mayor a 1 es bueno.
              </span>
            </span>
          </p>
          <span
            class={`text-xs px-2 py-1 rounded ${avgSharpe > 1 ? "bg-green-100 text-green-700" : "bg-orange-100 text-orange-700"}`}
          >
            {avgSharpe > 1 ? "Bueno" : "Regular"}
          </span>
        </div>
        <p class="text-3xl font-bold text-slate-900">
          {avgSharpe.toFixed(2)}
        </p>
        <p class="text-xs text-slate-500 mt-1">Ganancia vs riesgo</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium">
            Volatilidad Portfolio
          </p>
          <span
            class={`text-xs px-2 py-1 rounded ${avgVolatility < 15 ? "bg-green-100 text-green-700" : "bg-orange-100 text-orange-700"}`}
          >
            {avgVolatility < 15 ? "Baja" : "Media-Alta"}
          </span>
        </div>
        <p class="text-3xl font-bold text-slate-900">
          {avgVolatility.toFixed(1)}%
        </p>
        <p class="text-xs text-slate-500 mt-1">
          Desviación estándar anualizada
        </p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium flex items-center gap-1">
            Peor Pérdida
            <span class="group relative cursor-help">
              <svg
                class="w-4 h-4 text-slate-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span
                class="invisible group-hover:visible absolute left-0 top-6 w-64 bg-slate-800 text-white text-xs rounded p-2 z-10"
              >
                La mayor caída de valor desde un punto máximo. Indica el peor
                escenario que has experimentado.
              </span>
            </span>
          </p>
          <span class="text-xs px-2 py-1 rounded bg-red-100 text-red-700"
            >Desde el pico</span
          >
        </div>
        <p class="text-3xl font-bold text-red-600">
          {portfolioMaxDrawdown.toFixed(1)}%
        </p>
        <p class="text-xs text-slate-500 mt-1">Mayor caída registrada</p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium">Flujo Neto</p>
          <span
            class={`text-xs px-2 py-1 rounded ${netFlow >= 0 ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700"}`}
          >
            {netFlow >= 0 ? "Positivo" : "Negativo"}
          </span>
        </div>
        <p
          class={`text-3xl font-bold ${netFlow >= 0 ? "text-green-600" : "text-red-600"}`}
        >
          {netFlow >= 0 ? "+" : ""}{
            netFlow.toLocaleString("es-CO", {
              minimumFractionDigits: 0,
              maximumFractionDigits: 2,
            })
          } COP
        </p>
        <p class="text-xs text-slate-500 mt-1">
          Aportes: {
            periodContributions.toLocaleString("es-CO", {
              minimumFractionDigits: 0,
              maximumFractionDigits: 2,
            })
          } COP • Retiros: {
            periodWithdrawals.toLocaleString("es-CO", {
              minimumFractionDigits: 0,
              maximumFractionDigits: 2,
            })
          } COP
        </p>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-sm border border-slate-200">
        <div class="flex justify-between items-start mb-2">
          <p class="text-sm text-slate-600 font-medium">USD/COP</p>
          <span class="text-xs px-2 py-1 rounded bg-blue-100 text-blue-700"
            >Actual</span
          >
        </div>
        <p class="text-3xl font-bold text-slate-900">
          ${currentRate.toFixed(2)}
        </p>
        <p class="text-xs text-slate-500 mt-1">Tasa de cambio actual</p>
      </div>
    </div>

    <!-- Top Performers -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="p-3 bg-green-100 rounded-xl">
            <svg
              class="w-6 h-6 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-slate-900">
              Mejores Rendimientos
            </h3>
            <p class="text-sm text-slate-500">Últimos {periodDays} días</p>
          </div>
        </div>
        <div class="space-y-3">
          {
            topGainers.length > 0 ? (
              topGainers.map((account, index) => (
                <div class="group hover:bg-green-50 p-4 rounded-xl transition-colors border border-transparent hover:border-green-200">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="shrink-0 w-8 h-8 bg-linear-to-br from-green-500 to-emerald-600 text-white rounded-lg flex items-center justify-center font-bold text-sm">
                        {index + 1}
                      </div>
                      <div>
                        <p class="font-semibold text-slate-900">
                          {account.name}
                        </p>
                        <p class="text-xs text-slate-500">
                          {account.currency} • Rent. Ajustada:{" "}
                          {account.sharpe.toFixed(2)}
                        </p>
                      </div>
                    </div>
                    <div class="text-right">
                      <p class="font-bold text-green-600 text-lg">
                        +{account.roi.toFixed(2)}%
                      </p>
                      <p class="text-xs text-slate-500">
                        Vol: {account.volatility.toFixed(1)}%
                      </p>
                    </div>
                  </div>
                </div>
              ))
            ) : (
              <p class="text-center text-slate-400 py-8">
                No hay ganancias en este período
              </p>
            )
          }
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <div class="flex items-center gap-3 mb-6">
          <div class="p-3 bg-red-100 rounded-xl">
            <svg
              class="w-6 h-6 text-red-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-slate-900">
              Peores Rendimientos
            </h3>
            <p class="text-sm text-slate-500">Últimos {periodDays} días</p>
          </div>
        </div>
        <div class="space-y-3">
          {
            topLosers.length > 0 ? (
              topLosers.map((account, index) => (
                <div class="group hover:bg-red-50 p-4 rounded-xl transition-colors border border-transparent hover:border-red-200">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <div class="shrink-0 w-8 h-8 bg-linear-to-br from-red-500 to-rose-600 text-white rounded-lg flex items-center justify-center font-bold text-sm">
                        {index + 1}
                      </div>
                      <div>
                        <p class="font-semibold text-slate-900">
                          {account.name}
                        </p>
                        <p class="text-xs text-slate-500">
                          {account.currency} • Rent. Ajustada:{" "}
                          {account.sharpe.toFixed(2)}
                        </p>
                      </div>
                    </div>
                    <div class="text-right">
                      <p class="font-bold text-red-600 text-lg">
                        {account.roi.toFixed(2)}%
                      </p>
                      <p class="text-xs text-slate-500">
                        Vol: {account.volatility.toFixed(1)}%
                      </p>
                    </div>
                  </div>
                </div>
              ))
            ) : (
              <p class="text-center text-slate-400 py-8">
                No hay pérdidas en este período
              </p>
            )
          }
        </div>
      </div>
    </div>

    <!-- Composición del Portafolio -->
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h3 class="text-lg font-bold text-slate-900">
              Composición del Portafolio
            </h3>
            <p class="text-sm text-slate-500">
              Distribución real por valor en COP
            </p>
          </div>
          <span
            class="px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-700"
          >
            {accountsWithStats.length} activos
          </span>
        </div>
        <div class="flex justify-center relative">
          <FinanceChart
            id="composition-donut"
            type="doughnut"
            data={donutChartData}
            height="350px"
            options={{
              plugins: {
                legend: {
                  position: "bottom",
                  labels: { padding: 20, usePointStyle: true },
                },
              },
              cutout: "65%",
            }}
          />
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-bold text-slate-900">
      Distribución del Portafolio
    </h3>
    <div class="flex gap-2">
      <select
        id="sort-portfolio"
        class="text-xs px-3 py-1.5 border border-slate-300 rounded-lg bg-white text-slate-700 font-medium hover:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors cursor-pointer"
      >
        <option value="size">Por tamaño</option>
        <option value="roi">Por ROI</option>
        <option value="risk">Por riesgo</option>
      </select>
    </div>
  </div>
  <div id="portfolio-distribution" class="space-y-4">
    {
      accountsWithStats.map((account) => {
        const trendIcon = account.trend === "up" 
          ? "↗" 
          : account.trend === "down" 
            ? "↘" 
            : "→";
        
        const trendColor = account.trend === "up"
          ? "text-green-600"
          : account.trend === "down"
            ? "text-red-600"
            : "text-slate-400";
        
        const riskColorBg = 
          account.riskLevel === "bajo"
            ? "bg-green-100 text-green-700"
            : account.riskLevel === "medio"
              ? "bg-yellow-100 text-yellow-700"
              : account.riskLevel === "alto"
                ? "bg-orange-100 text-orange-700"
                : "bg-red-100 text-red-700";
        
        const barColor = 
          account.riskLevel === "bajo"
            ? "bg-gradient-to-r from-green-500 to-emerald-600"
            : account.riskLevel === "medio"
              ? "bg-gradient-to-r from-yellow-500 to-amber-600"
              : account.riskLevel === "alto"
                ? "bg-gradient-to-r from-orange-500 to-red-600"
                : "bg-gradient-to-r from-red-500 to-rose-700";
        
        return (
          <div class="space-y-2" data-allocation={account.allocation} data-roi={account.roi} data-risk={account.volatility}>
            <div class="flex justify-between items-center">
              <div class="flex items-center gap-2">
                <span class={`text-lg font-semibold ${trendColor}`}>
                  {trendIcon}
                </span>
                <span class="font-semibold text-slate-900">
                  {account.name}
                </span>
                <span
                  class={`px-2 py-0.5 rounded text-xs font-medium ${riskColorBg}`}
                >
                  {account.riskLevel}
                </span>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold text-slate-900">
                  {account.allocation.toFixed(1)}%
                </p>
                <p class="text-xs text-slate-500">
                  {account.totalCurrentCOP.toLocaleString("es-CO", {
                    minimumFractionDigits: 0,
                    maximumFractionDigits: 0,
                  })} COP
                </p>
              </div>
            </div>
            <div class="w-full bg-slate-100 rounded-full h-3 overflow-hidden">
              <div
                class={`h-3 rounded-full transition-all duration-500 ${barColor}`}
                style={`width: ${account.allocation}%`}
              />
            </div>
            <div class="flex justify-between text-xs text-slate-500">
              <span>
                ROI: <span class={account.roi >= 0 ? "text-green-600 font-medium" : "text-red-600 font-medium"}>
                  {account.roi >= 0 ? "+" : ""}{account.roi.toFixed(2)}%
                </span>
              </span>
              <span>Vol: {account.volatility.toFixed(1)}%</span>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
    </div>

    <!-- Análisis Detallado -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
      <h3 class="text-lg font-bold text-slate-900 mb-6">
        Análisis Detallado por Cuenta
      </h3>
      <div class="space-y-4">
        {
          accountsWithStats.map((account) => (
            <div class="border border-slate-200 rounded-xl p-5 hover:shadow-md transition-shadow">
              <div class="flex flex-col justify-between items-start mb-4">
                <div class="w-full flex flex-row justify-between">
                  <div>
                    <div class="flex items-center gap-3 mb-2">
                      <h4 class="text-lg font-bold text-slate-900">
                        {account.name.toUpperCase()}
                      </h4>
                      <span
                        class={`px-2 py-1 rounded text-xs font-medium ${
                          account.riskLevel === "bajo"
                            ? "bg-green-100 text-green-700"
                            : account.riskLevel === "medio"
                              ? "bg-yellow-100 text-yellow-700"
                              : account.riskLevel === "alto"
                                ? "bg-orange-100 text-orange-700"
                                : "bg-red-100 text-red-700"
                        }`}
                      >
                        {account.riskLevel.toUpperCase()}
                      </span>
                      {account.trend === "up" && (
                        <svg
                          class="w-5 h-5 text-green-500"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                          />
                        </svg>
                      )}
                      {account.trend === "down" && (
                        <svg
                          class="w-5 h-5 text-red-500"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"
                          />
                        </svg>
                      )}
                    </div>
                    <p class="text-2xl font-bold text-slate-900">
                      $
                      {account.currentValue.toLocaleString("es-CO", {
                        minimumFractionDigits: 0,
                        maximumFractionDigits: 2,
                      })}{" "}
                      {account.currency}
                        <span class={`text-sm font-medium ${account.roi >= 0 ? "text-green-600" : "text-red-600"}`}>
                          {account.roi >= 0 ? "+" : ""}
                          {account.roi.toFixed(2)}% ROI
                        </span>
                    </p>
                  </div>
                  <div class="text-right">
                      <p class="text-xs text-slate-500 mb-1">Asignación</p>
                      <p class="text-2xl font-bold text-blue-600">
                        {account.allocation.toFixed(1)}%
                      </p>
                  </div>
                </div>
                <!-- Detalles de la cuenta -->
                <div class="w-full mt-3 flex flex-wrap justify-center lg:justify-between items-center gap-2 text-sm">
                  <div class="bg-slate-50 rounded-lg p-3 flex-1 text-center">
                    <p class="text-xs text-slate-600 mb-1">Invertido</p>
                    <p class="text-lg font-bold text-slate-900">
                      ${account.invested.toLocaleString("es-CO", {maximumFractionDigits: 2})}
                    </p>
                  </div>

                  <div class="bg-slate-50 rounded-lg p-3 flex-1 text-center">
                    <p class="text-xs text-slate-600 mb-1">Ganancia / Pérdida</p>
                    <p
                      class={`text-lg font-bold ${
                        account.profitLoss >= 0 ? "text-green-600" : "text-red-600"
                      }`}
                    >
                      {account.profitLoss >= 0 ? "+" : "-"}$
                      {Math.abs(account.profitLoss).toLocaleString("es-CO", {
                        maximumFractionDigits: 2,
                      })}
                    </p>
                  </div>

                  <div class="bg-slate-50 rounded-lg p-3 flex-1 text-center">
                    <p class="text-xs text-slate-600 mb-1">Retiros</p>
                    <p
                      class={`text-lg font-bold ${
