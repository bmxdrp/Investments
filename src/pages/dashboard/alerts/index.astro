---
import Layout from "@layouts/default.astro";
import {
    getUserAlerts,
    toggleAlert,
    deleteAlert,
    createAlert,
} from "@lib/alerts-manager";
import { getLatestExchangeRate } from "@lib/finance";

const {userId, name, userRole} = Astro.locals;
if (!userId) return Astro.redirect("/auth/login");

// Obtener tasa actual para referencia
const exchangeData = await getLatestExchangeRate();
const currentRate = exchangeData?.usd_to_cop || 0;

// Manejo de acciones (POST)
// Nota: Idealmente mover a API endpoints, pero para prototipo rápido usamos Astro Actions-like pattern aqui
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");

    if (action === "create") {
        const type = formData.get("type") as any;
        const target_value = Number(formData.get("target_value"));
        const condition = formData.get("condition") as any;

        if (type === "exchange_rate" && target_value > 0) {
            await createAlert({
                user_id: userId,
                type,
                target_value,
                condition,
            });
        }
    } else if (action === "delete") {
        const id = Number(formData.get("id"));
        if (id) await deleteAlert(id, userId);
    } else if (action === "toggle") {
        const id = Number(formData.get("id"));
        const isActive = formData.get("is_active") === "true"; // Viene el valor nuevo
        if (id) await toggleAlert(id, userId, isActive);
    }
}

const alerts = await getUserAlerts(userId);
---

<Layout title="Alertas" activePage="alerts" name={name} user_type={userRole}>
    <div class="max-w-4xl mx-auto space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">
                    Alertas Inteligentes
                </h1>
                <p class="text-gray-600 mt-1">
                    Recibe notificaciones sobre cambios importantes
                </p>
            </div>
            <div class="text-right">
                <p class="text-xs text-gray-400 uppercase font-semibold">
                    Dólar Actual
                </p>
                <p class="text-xl font-mono font-bold text-gray-700">
                    ${currentRate.toLocaleString("es-CO")}
                </p>
            </div>
        </div>

        <!-- Crear Nueva Alerta -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-lg font-bold text-gray-900 mb-4">Nueva Regla</h2>
            <form
                method="POST"
                class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end"
            >
                <input type="hidden" name="action" value="create" />

                <div class="md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >Tipo</label
                    >
                    <select
                        name="type"
                        class="w-full rounded-lg border-gray-300 bg-gray-50"
                    >
                        <option value="exchange_rate"
                            >Tasa de Cambio (USD)</option
                        >
                        <!-- <option value="monthly_report">Reporte Mensual (Pronto)</option> -->
                    </select>
                </div>

                <div class="md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >Condición</label
                    >
                    <select
                        name="condition"
                        class="w-full rounded-lg border-gray-300"
                    >
                        <option value="gt">Mayor que (&gt;)</option>
                        <option value="lt">Menor que (&lt;)</option>
                    </select>
                </div>

                <div class="md:col-span-1">
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >Valor (COP)</label
                    >
                    <input
                        type="number"
                        name="target_value"
                        placeholder="Ej: 3900"
                        class="w-full rounded-lg border-gray-300"
                        required
                    />
                </div>

                <div class="md:col-span-1">
                    <button
                        type="submit"
                        class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition font-medium"
                    >
                        Crear Alerta
                    </button>
                </div>
            </form>
        </div>

        <!-- Lista de Alertas -->
        <div class="space-y-4">
            <h2 class="text-lg font-bold text-gray-900">Mis Alertas Activas</h2>

            {
                alerts.length === 0 && (
                    <div class="text-center py-10 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                        <p class="text-gray-500">
                            No tienes alertas configuradas.
                        </p>
                    </div>
                )
            }

            {
                alerts.map((alert) => (
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 flex items-center justify-between hover:shadow-md transition-shadow">
                        <div class="flex items-center gap-4">
                            <div
                                class={`p-3 rounded-full ${alert.is_active ? "bg-blue-100 text-blue-600" : "bg-gray-100 text-gray-400"}`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                                    />
                                </svg>
                            </div>
                            <div>
                                <p class="font-bold text-gray-900">
                                    {alert.type === "exchange_rate"
                                        ? "Dólar (USD)"
                                        : "Reporte"}
                                    <span class="font-normal text-gray-600">
                                        {alert.condition === "gt"
                                            ? "sube por encima de"
                                            : "baja por debajo de"}
                                    </span>
                                    <span class="font-mono text-blue-600 ml-1">
                                        $
                                        {alert.target_value?.toLocaleString(
                                            "es-CO",
                                        )}
                                    </span>
                                </p>
                                <p class="text-xs text-gray-400">
                                    Creada:{" "}
                                    {new Date(
                                        alert.created_at,
                                    ).toLocaleDateString()}
                                    {alert.last_triggered_at &&
                                        ` · Último aviso: ${new Date(alert.last_triggered_at).toLocaleDateString()}`}
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-3">
                            <form method="POST">
                                <input
                                    type="hidden"
                                    name="action"
                                    value="toggle"
                                />
                                <input
                                    type="hidden"
                                    name="id"
                                    value={alert.id.toString()}
                                />
                                <input
                                    type="hidden"
                                    name="is_active"
                                    value={(!alert.is_active).toString()}
                                />
                                <button
                                    type="submit"
                                    class={`text-sm px-3 py-1 rounded-full font-medium transition-colors ${alert.is_active ? "bg-green-100 text-green-700 hover:bg-green-200" : "bg-gray-100 text-gray-600 hover:bg-gray-200"}`}
                                >
                                    {alert.is_active ? "Activa" : "Pausada"}
                                </button>
                            </form>

                            <form
                                method="POST"
                                onsubmit="return confirm('¿Eliminar esta alerta?');"
                            >
                                <input
                                    type="hidden"
                                    name="action"
                                    value="delete"
                                />
                                <input
                                    type="hidden"
                                    name="id"
                                    value={alert.id.toString()}
                                />
                                <button
                                    type="submit"
                                    class="text-red-400 hover:text-red-600 p-2"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-5 w-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                        />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Layout>
