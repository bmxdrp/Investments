---
import Layout from "@layouts/admin.astro";
import { sql } from "@lib/db";

// Verificar autenticación y rol de administrador (esto debería ser más robusto en producción)
const userId = Astro.locals.userId;
if (!userId) {
    return Astro.redirect("/auth/login?returnTo=/admin");
}

// Obtener estadísticas
let totalUsers = 0;
let totalRoles = 0;
let recentUsers: any[] = [];

try {
    const usersCount = await sql`SELECT COUNT(*) as count FROM users`;
    totalUsers = parseInt(usersCount[0].count);

    const rolesCount = await sql`SELECT COUNT(*) as count FROM roles`;
    totalRoles = parseInt(rolesCount[0].count);

    recentUsers = await sql`
    SELECT u.id, u.email, u.created_at, r.name as role_name
    FROM users u
    LEFT JOIN roles r ON u.role_id = r.id
    ORDER BY u.created_at DESC
    LIMIT 5
  `;
} catch (error) {
    console.error("Error fetching admin stats:", error);
}
---

<Layout title="Admin Panel" activePage="admin-home">
    <div class="max-w-7xl mx-auto space-y-6">
        <!-- Header -->
        <div>
            <h1 class="text-3xl font-bold text-gray-900">
                Panel de Administración
            </h1>
            <p class="text-gray-600 mt-1">
                Gestión de usuarios y roles del sistema
            </p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <!-- Total Usuarios -->
            <div
                class="bg-white rounded-xl p-6 shadow-sm border border-gray-200"
            >
                <div class="flex items-center justify-between mb-2">
                    <p class="text-sm font-medium text-gray-600">
                        Usuarios Totales
                    </p>
                    <div class="p-2 bg-blue-50 rounded-lg">
                        <svg
                            class="w-5 h-5 text-blue-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                            ></path>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold text-gray-900">{totalUsers}</p>
                <div class="mt-2">
                    <a
                        href="/admin/users"
                        class="text-sm text-blue-600 hover:text-blue-700 font-medium"
                        >Ver todos →</a
                    >
                </div>
            </div>

            <!-- Total Roles -->
            <div
                class="bg-white rounded-xl p-6 shadow-sm border border-gray-200"
            >
                <div class="flex items-center justify-between mb-2">
                    <p class="text-sm font-medium text-gray-600">
                        Roles Definidos
                    </p>
                    <div class="p-2 bg-purple-50 rounded-lg">
                        <svg
                            class="w-5 h-5 text-purple-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                            ></path>
                        </svg>
                    </div>
                </div>
                <p class="text-3xl font-bold text-gray-900">{totalRoles}</p>
                <div class="mt-2">
                    <a
                        href="/admin/roles"
                        class="text-sm text-purple-600 hover:text-purple-700 font-medium"
                        >Gestionar →</a
                    >
                </div>
            </div>
        </div>

        <!-- Usuarios Recientes -->
        <div
            class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden"
        >
            <div
                class="px-6 py-4 border-b border-gray-200 flex justify-between items-center"
            >
                <h2 class="text-lg font-bold text-gray-900">
                    Usuarios Recientes
                </h2>
                <a
                    href="/admin/users"
                    class="text-sm text-blue-600 hover:text-blue-700 font-medium"
                    >Ver todos</a
                >
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-600">
                    <thead class="bg-gray-50 text-gray-900 font-medium">
                        <tr>
                            <th class="px-6 py-3">Email</th>
                            <th class="px-6 py-3">Rol</th>
                            <th class="px-6 py-3">Fecha Registro</th>
                            <th class="px-6 py-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {
                            recentUsers.map((user) => (
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-3 font-medium text-gray-900">
                                        {user.email}
                                    </td>
                                    <td class="px-6 py-3">
                                        <span
                                            class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                                                user.role_name === "admin"
                                                    ? "bg-purple-100 text-purple-800"
                                                    : "bg-blue-100 text-blue-800"
                                            }`}
                                        >
                                            {user.role_name || "Sin rol"}
                                        </span>
                                    </td>
                                    <td class="px-6 py-3">
                                        {new Date(
                                            user.created_at,
                                        ).toLocaleDateString("es-CO", {
                                            year: "numeric",
                                            month: "short",
                                            day: "numeric",
                                        })}
                                    </td>
                                    <td class="px-6 py-3">
                                        <a
                                            href={`/admin/users/${user.id}`}
                                            class="text-blue-600 hover:text-blue-900"
                                        >
                                            Editar
                                        </a>
                                    </td>
                                </tr>
                            ))
                        }
                        {
                            recentUsers.length === 0 && (
                                <tr>
                                    <td
                                        colspan="4"
                                        class="px-6 py-8 text-center text-gray-500"
                                    >
                                        No hay usuarios registrados
                                        recientemente.
                                    </td>
                                </tr>
                            )
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</Layout>
