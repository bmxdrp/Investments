---
import Layout from "@layouts/admin.astro";
import { setRLSUser, sql } from "@lib/db";

const userId = Astro.locals.userId;
if (!userId) {
    return Astro.redirect("/auth/login?returnTo=/admin/roles");
}

// Get success/error messages from URL
const successMessage = Astro.url.searchParams.get("success");
const errorMessage = Astro.url.searchParams.get("error");

let roles: any[] = [];
try {
    await setRLSUser(userId);

    roles = await sql`
    SELECT r.id, r.name, r.description, COUNT(u.id) as user_count
    FROM roles r
    LEFT JOIN users u ON r.id = u.role_id
    GROUP BY r.id
    ORDER BY r.name
  `;
} catch (error) {
    console.error("Error fetching roles:", error);
}
---

<Layout title="Gestión de Roles" activePage="roles">
    <div class="max-w-7xl mx-auto space-y-6">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Roles</h1>
                <p class="text-gray-600 mt-1">
                    Administra los roles y permisos del sistema
                </p>
            </div>
            <a
                href="/admin/roles/create"
                class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors flex items-center gap-2"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 4v16m8-8H4"></path>
                </svg>
                Nuevo Rol
            </a>
        </div>

        {
            successMessage && (
                <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg flex items-center gap-2">
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                    </svg>
                    <span>
                        <strong>Éxito:</strong> {successMessage}
                    </span>
                </div>
            )
        }

        {
            errorMessage && (
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                    <strong>Error:</strong> {errorMessage}
                </div>
            )
        }

        <div
            class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden"
        >
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-600">
                    <thead class="bg-gray-50 text-gray-900 font-medium">
                        <tr>
                            <th class="px-6 py-3">Nombre</th>
                            <th class="px-6 py-3">Descripción</th>
                            <th class="px-6 py-3 text-center"
                                >Usuarios Asignados</th
                            >
                            <th class="px-6 py-3 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {
                            roles.map((role) => (
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-3 font-medium text-gray-900">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                            {role.name}
                                        </span>
                                    </td>
                                    <td class="px-6 py-3 max-w-md truncate">
                                        {role.description || "-"}
                                    </td>
                                    <td class="px-6 py-3 text-center">
                                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                                            {role.user_count}
                                        </span>
                                    </td>
                                    <td class="px-6 py-3 text-right space-x-2">
                                        <a
                                            href={`/admin/roles/${role.id}`}
                                            class="text-blue-600 hover:text-blue-900 font-medium"
                                        >
                                            Editar
                                        </a>
                                        {role.name !== "admin" &&
                                            role.name !== "user" && (
                                                <form
                                                    method="POST"
                                                    action={`/api/admin/roles/${role.id}/delete`}
                                                    class="inline"
                                                    onsubmit="return confirm('¿Estás seguro de eliminar este rol?');"
                                                >
                                                    <button
                                                        type="submit"
                                                        class="text-red-600 hover:text-red-900 font-medium"
                                                    >
                                                        Eliminar
                                                    </button>
                                                </form>
                                            )}
                                    </td>
                                </tr>
                            ))
                        }
                        {
                            roles.length === 0 && (
                                <tr>
                                    <td
                                        colspan="4"
                                        class="px-6 py-12 text-center text-gray-500"
                                    >
                                        <p>No hay roles definidos.</p>
                                    </td>
                                </tr>
                            )
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</Layout>
