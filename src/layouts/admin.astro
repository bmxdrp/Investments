---
import "@styles/global.css";
import Sidebar from "@components/admin/sidebar.astro";

interface Props {
    title: string;
    activePage: string;
}

const { title, activePage } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title} - Capyte Admin</title>
    </head>
    <body class="bg-stone-950">
        <Sidebar activePage={activePage} />
        <main class="lg:ml-64 min-h-screen bg-stone-50 p-6">
            <slot />
        </main>
    </body>
</html>
