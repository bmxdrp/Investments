---
import "@styles/global.css";

interface Props {
  title: string;
  errorCode: string;
  errorTitle: string;
  errorMessage: string;
  iconType?: "forbidden" | "notfound" | "server";
  showAuthLinks?: boolean; // Si es true, muestra enlaces de login/registro en lugar de dashboard
}

const { title, errorCode, errorTitle, errorMessage, iconType = "notfound", showAuthLinks = false } = Astro.props;

// Verificar si el usuario est√° autenticado
const isAuthenticated = !!Astro.locals.userId;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Capyte</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
  </head>
  <body class="bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-2xl w-full">
      <!-- Error Card -->
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
        <div class="p-8 sm:p-12">
          <!-- Icon -->
          <div class="flex justify-center mb-8">
            {iconType === "forbidden" ? (
              <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
            ) : iconType === "server" ? (
              <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              </div>
            ) : (
              <div class="w-24 h-24 bg-amber-100 rounded-full flex items-center justify-center">
                <svg class="w-12 h-12 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            )}
          </div>

          <!-- Error Code -->
          <div class="text-center mb-6">
            <h1 class="text-8xl font-extrabold bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent mb-4">
              {errorCode}
            </h1>
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
              {errorTitle}
            </h2>
            <p class="text-lg text-gray-600 max-w-md mx-auto">
              {errorMessage}
            </p>
          </div>

          <!-- Slot for custom content -->
          <slot />

          <!-- Action Buttons - Conditional based on auth status -->
          {(showAuthLinks || !isAuthenticated) ? (
            <!-- Show auth links for non-authenticated users -->
            <div class="flex flex-col sm:flex-row gap-3 justify-center mt-8">
              <a
                href="/auth/login"
                class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                </svg>
                Iniciar Sesi√≥n
              </a>
              <a
                href="/auth/register"
                class="inline-flex items-center justify-center px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-all duration-200"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Crear Cuenta
              </a>
            </div>
          ) : (
            <!-- Show dashboard links for authenticated users -->
            <div class="flex flex-col sm:flex-row gap-3 justify-center mt-8">
              <a
                href="/dashboard"
                class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Ir al Dashboard
              </a>
              <button
                onclick="history.back()"
                class="inline-flex items-center justify-center px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-all duration-200"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver Atr√°s
              </button>
            </div>
          )}
        </div>

        <!-- Decorative Footer - Conditional based on auth status -->
        <div class="bg-gradient-to-r from-indigo-50 via-purple-50 to-pink-50 px-8 py-6 border-t border-gray-100">
          <div class="text-center">
            <p class="text-sm font-semibold text-gray-700 mb-3">Enlaces √ötiles</p>
            <div class="flex flex-wrap justify-center gap-4">
              {isAuthenticated ? (
                <>
                  <a href="/dashboard" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium transition-colors">
                    üìä Dashboard
                  </a>
                  <a href="/dashboard/accounts" class="text-sm text-purple-600 hover:text-purple-800 font-medium transition-colors">
                    üíº Cuentas
                  </a>
                  <a href="/dashboard/history" class="text-sm text-pink-600 hover:text-pink-800 font-medium transition-colors">
                    üìú Historial
                  </a>
                  <a href="/auth/logout" class="text-sm text-gray-600 hover:text-gray-800 font-medium transition-colors">
                    üö™ Cerrar Sesi√≥n
                  </a>
                </>
              ) : (
                <>
                  <a href="/auth/login" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium transition-colors">
                    üîê Iniciar Sesi√≥n
                  </a>
                  <a href="/auth/register" class="text-sm text-purple-600 hover:text-purple-800 font-medium transition-colors">
                    ‚ú® Crear Cuenta
                  </a>
                </>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Decorative Elements -->
      <div class="mt-8 text-center">
        <p class="text-white text-sm opacity-75">
          ¬© 2024 Capyte. Gesti√≥n de Inversiones.
        </p>
      </div>
    </div>

    <!-- Animated Background Circles -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>
  </body>
</html>
